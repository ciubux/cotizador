                                    <div class="col-xs-8">
                                        <select class="form-control" id="proveedor" name="proveedor">
                                            <option selected>Seleccione...</option>
                                            @foreach (Model.Proveedor item in proveedores)
                                            {
                                                <option value="@item.idProveedor">@item.nombre</option>
