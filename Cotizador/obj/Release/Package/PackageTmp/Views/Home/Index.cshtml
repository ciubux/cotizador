@{
    ViewBag.Title = "Inicio";
    List<Model.PrecioLista> precios = ViewBag.Precios;
    List<Model.Moneda> monedas = ViewBag.Monedas;
    List<Model.Categoria> categorias = ViewBag.Categorias;
    List<Model.Proveedor> proveedores = ViewBag.Proveedores;
}

    <br/>
    <div class="container">
        <form class="form-horizontal" action="/Home/GenerarPDF" method="post">
            <div class="header">
                <div class="left">
                    Cotización - <input class="label-input" type="text" id="fecha" name="fecha">
                </div>
                <div class="right">
                    @ViewBag.nombreUsuario
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ActionLink("Salir", "LogOff", "Account");
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="ciudad" class="control-label col-xs-4">Ciudad</label>
                        <div class="col-xs-8">
                            @Html.Action("list", "Ciudad")


                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="cliente" class="control-label col-xs-4">Señores</label>

                        <div class="col-xs-8">
                            <select class="form-control input-sm" id="idCliente" name="idCliente">
                                <option value=""></option>
                            </select>
                            <!--<input class="form-control col-xs-5" type="text" value="" id="cliente" name="cliente">-->
                        </div>
                    </div>

                    <!--       <button onclick="alert( $('#idCliente').val())" ></button>-->
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="igv" class="control-label col-xs-4">Incluido IGV</label>
                        <div class="col-xs-8">
                            <div class="radio radio-inline">
                                <label class="radio-label">
                                    @if (ViewBag.incluidoIgv)
                                    {
                                        <input class="radio-input" checked="checked" type="radio" name="igv" id="igvsi" value="1"> 
                                    }
                                    else
                                    {
                                        <input class="radio-input" type="radio" name="igv" id="igvsi" value="1"> 
                                    }       
                                    Sí                             
                                </label>
                            </div>
                            <div class="radio radio-inline">
                                <label class="radio-label">
                                    @if (!ViewBag.incluidoIgv)
                                    {
                                        <input class="radio-input" checked="checked" type="radio" name="igv" id="igvno" value="0">
                                    }
                                    else
                                    {
                                        <input class="radio-input" type="radio" name="igv" id="igvno" value="0">
                                    }  
                                     No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="codigoproveedor" class="control-label col-xs-4">Mostrar cod. proveedor</label>
                        <div class="col-xs-8">
                            <div class="radio radio-inline">
                                <label class="radio-label">
                                    @if (ViewBag.mostrarCodProveedor)
                                    {
                                        <input class="radio-input" type="radio" checked="checked" name="codigoproveedor" id="codigoproveedorsi" value="1">
                                    }
                                    else
                                    {
                                        <input class="radio-input" type="radio" name="codigoproveedor" id="codigoproveedorsi" value="1"> 
                                    }
                                    Si
                                </label>
                            </div>
                            <div class="radio radio-inline">
                                <label class="radio-label">
                                    @if (!ViewBag.mostrarCodProveedor)
                                    {
                                        <input class="radio-input" type="radio" checked="checked" name="codigoproveedor" id="codigoproveedorno" value="0">
                                    }
                                    else
                                    {
                                        <input class="radio-input" type="radio" name="codigoproveedor" id="codigoproveedorno" value="0">
                                    }
                                    No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="moneda" class="control-label col-xs-4">Moneda</label>
                        <div class="col-xs-8">
                            @foreach (Model.Moneda moneda in monedas)
                            {
                                <div class="radio radio-inline">
                                    <label class="radio-label">
                                        @if (moneda.simbolo.Equals(ViewBag.monedaSimbolo))
                                        {
                                            <input class="radio-input rMoneda" checked="checked" type="radio" name="moneda" value="@moneda.idMoneda">
                                        }
                                        else
                                        {
                                            <input class="radio-input rMoneda" type="radio" name="moneda" value="@moneda.idMoneda"> 
                                        }             
                                        @moneda.simbolo                           
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="tipocambio" class="control-label col-xs-4">Tipo Cambio</label>
                        <div class="col-xs-8">
                            <input class="form-control" type="text" value="@ViewBag.TipoCambio" id="tipocambio" name="tipocambio">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="precio" class="control-label col-xs-4">Precio Lista</label>
                        <div class="col-xs-8">
                            <select class="form-control" id="precio" name="precio">
                                <option selected>Seleccione...</option>
                                @foreach (Model.PrecioLista item in precios)
                                {
                                    <option value="@item.idPrecioLista">@item.nombreVista</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <label for="flete" class="control-label col-xs-4">Flete</label>
                        <div class="col-xs-8">
                            <input class="form-control" type="text" value="" id="flete" name="flete">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <div class="col-xs-10">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAgregarProducto">Agregar Producto</button>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table" data-sorting="true" data-show-toggle="false">
                <thead>
                    <tr>
                        <th data-sortable="true">Prov</th>
                        <th data-sortable="true" data-breakpoints="xs">Code</th>
                        <th data-sortable="false">Producto</th>
                        <th data-sortable="true" data-breakpoints="xs">Presentación</th>
                        <th data-sortable="false" data-breakpoints="xs sm">Imagen</th>
                        <th data-sortable="true" data-breakpoints="xs sm">Nuevo valor Unitario</th>
                        <th data-sortable="true" data-breakpoints="xs sm">Cantidad</th>
                        <th data-sortable="true" data-breakpoints="xs sm">Precio Lista</th>
                        <th data-sortable="true" data-breakpoints="xs sm">% Dscto</th>
                        <th data-sortable="false" data-breakpoints="xs sm">Costo</th>
                        @*<th data-sortable="false" data-breakpoints="xs sm">Cotización</th>
                        <th data-sortable="false" data-breakpoints="xs sm">Margen</th>
                        <th data-sortable="false" data-breakpoints="xs sm">Utilidad Bruta</th>*@
                        <!-- <th data-breakpoints="all" data-title="DOB">Date of Birth</th> -->
                    </tr>
                </thead>
                <tbody>

                    @*<tr data-expanded="true">
                        <td>Proveedor 4</td>
                        <td>HD004</td>
                        <td>Pasta Dental</td>
                        <td>Unidad</td>
                        <td class="column-img"><img class="table-product-img" src="images/pasta_dental.png"></td>
                        <td>15</td>
                        <td>2</td>
                        <td>P3</td>
                        <td>10%</td>
                        <td>10</td>
                        <td>15</td>
                        <td>33.3 %</td>
                        <td>5</td>
                    </tr>
                    <tr data-expanded="true">
                        <td>Proveedor 5</td>
                        <td>HD005</td>
                        <td>Jabón líquido</td>
                        <td>Unidad</td>
                        <td class="column-img"><img class="table-product-img" src="images/jabon_liquido.jpg"></td>
                        <td>15</td>
                        <td>2</td>
                        <td>P3</td>
                        <td>10%</td>
                        <td>10</td>
                        <td>15</td>
                        <td>33.3 %</td>
                        <td>5</td>
                    </tr>*@
                </tbody>
            </table>

            <div class="row">
                <div class="col-sm-6 col-lg-5">
                    <div class="form-group">
                        <div class="col-xs-10">
                            <button type="submit" class="btn btn-primary">Generar PDF</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>        
    </div>

