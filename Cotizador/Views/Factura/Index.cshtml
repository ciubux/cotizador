@{
    ViewBag.Title = "Búsqueda Factura";
    Model.DocumentoVenta documentoVenta = ViewBag.documentoVenta;
    List<Model.DocumentoVenta> documentoVentaList = ViewBag.documentoVentaList;

}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <form class="form-horizontal">

        <div class="row">
            <!--SERIE
    <div class="col-sm-6 col-lg-5">
        <div class="form-group">
            @Html.LabelFor(dv => documentoVenta.serie, htmlAttributes: new { @class = "control-label col-xs-4" })

            <div class="col-xs-8">
                @Html.TextBoxFor(dv => documentoVenta.serie, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
                <span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el número los demás criterios no serán considerados al realizar la búsqueda.</span>
            </div>

        </div>

    </div>-->
            <!--NÚMERO -->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.numero, htmlAttributes: new { @class = "control-label col-xs-4" })

                    <div class="col-xs-8">
                        @if (Int64.Parse(documentoVenta.numero) > 0)
                {
                    @Html.TextBoxFor(dv => documentoVenta.numero, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
        }
        else
        {
            @Html.TextBoxFor(dv => documentoVenta.numero, htmlAttributes: new { @class = "form-control", type = "number", min = "0", Value = "" })
}
                    </div>

                </div>

            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="documentoVenta_estaAnulado" class="control-label col-xs-4">¿Considerar Anulados?:</label>
                    <div class="col-xs-8">
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (documentoVenta.estaAnulado)
                                {
                                    <input class="radio-input" checked type="radio" name="documentoVenta_estaAnulado" id="anuladosi" value="1">@ViewBag.Si;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="documentoVenta_estaAnulado" id="anuladosi" value="1">@ViewBag.Si;
                                }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (!documentoVenta.estaAnulado)
                                {
                                    <input class="radio-input" checked type="radio" name="documentoVenta_estaAnulado" id="anuladono" value="0">@ViewBag.No;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="documentoVenta_estaAnulado" id="anuladono" value="0">@ViewBag.No;
                                }
                            </label>
                        </div>
                    </div>

                </div>
            </div>


        </div>


        <div class="row">
            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.ciudad, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                        new
                        {
                            ciudadSelectId = "idCiudad",
                            selectedValue = documentoVenta.ciudad.idCiudad
                        })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-5">
                <!--CLIENTE-->
                <div class="form-group">
                    <label for="idCliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                            {
                                <option selected value="@documentoVenta.cliente.idCliente">@documentoVenta.cliente</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>
                </div>

            </div>



        </div>



        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.fechaEmisionDesde, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEmisionDesdetmp" value="@ViewBag.fechaEmisionDesde" />
                        <input class="form-control" type="text" id="documentoVenta_fechaEmisionDesde" name="documentoVenta_fechaEmisionDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.fechaEmisionHasta, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEmisionHastatmp" value="@ViewBag.fechaEmisionHasta" />
                        <input class="form-control" type="text" id="documentoVenta_fechaEmisionHasta" name="documentoVenta_fechaEmisionDesde">
                    </div>
                </div>
            </div>
        </div>
       

        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarBusqueda" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusqueda" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>

        <table id="tableFacturas" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idDocumentoVenta" data-visible="false"></th>
                    <th data-name="serie" data-visible="true">Serie</th>
                    <th data-name="numero" data-visible="true">Número</th>
                    <th data-name="usuario" data-visible="true">Creada Por</th>
                    <th data-name="fechaCreacion" data-sortable="true" data-breakpoints="xs">Fecha Creación</th>
                    <th data-name="razonSocial" data-sortable="true">Razón Social</th>
                    <th data-name="ruc" data-sortable="false" data-breakpoints="xs">RUC</th>
                    <th data-name="ciudad" data-sortable="false" data-breakpoints="xs">Sede MP</th>
                    <th data-name="total" data-sortable="true" data-breakpoints="xs">Total</th>
                </tr>
            </thead>
            <tbody>            

            </tbody>
        </table>

        @if (documentoVentaList.Count == 0)
    {
        <div id="msgBusquedaSinResultados" style="display:none;" class="col-lg-12">
            <p class="pagination-centered" style=" font-size: medium" align="center">
                La búsqueda no obtuvo resultados.
            </p>
        </div>
}
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/factura")
}
