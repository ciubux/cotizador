@{
    ViewBag.Title = "Búsqueda Factura";
    Model.DocumentoVenta documentoVenta = ViewBag.documentoVenta;
    List<Model.DocumentoVenta> documentoVentaList = ViewBag.documentoVentaList;

}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <input type="hidden" id="idDocumentoVenta" />
    
    <form class="form-horizontal">

        <div class="row">

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.ciudad, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                                     new
                                     {
                                         ciudadSelectId = "idCiudad",
                                         selectedValue = documentoVenta.ciudad.idCiudad
                                     })
                    </div>
                </div>
            </div>


            <div class="col-sm-6 col-lg-4">
                <!--CLIENTE-->
                <div class="form-group">
                    <label for="idCliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                            {
                                <option selected value="@documentoVenta.cliente.idCliente">@documentoVenta.cliente</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>
                </div>

            </div>


           @if (documentoVenta.usuario.apruebaAnulaciones)
           {
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="documentoVenta_solicitadoAnulacion" class="control-label col-xs-4">Mostrar solo con Solicitud de Anulación:</label>
                    <div class="col-xs-8">
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (documentoVenta.solicitadoAnulacion)
                                {
                                    <input class="radio-input" checked type="radio" name="documentoVenta_solicitadoAnulacion" id="anuladosi" value="1">@ViewBag.Si;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="documentoVenta_solicitadoAnulacion" id="anuladosi" value="1">@ViewBag.Si;
                                }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (!documentoVenta.solicitadoAnulacion)
                                {
                                    <input class="radio-input" checked type="radio" name="documentoVenta_solicitadoAnulacion" id="anuladono" value="0">@ViewBag.No;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="documentoVenta_solicitadoAnulacion" id="anuladono" value="0">@ViewBag.No;
                                }
                            </label>
                        </div>
                    </div>

                </div>
            </div>
           }

        </div>


        <div class="row">

            <!--NUMERO FACTURA-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="documentoVenta_numero" class="control-label col-xs-4">Número Factura:</label>

                    <div class="col-xs-8">
                        @if (Int64.Parse(documentoVenta.numero) > 0)
                        {
                            @Html.TextBoxFor(dv => documentoVenta.numero, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
                        }
                        else
                        {
                            @Html.TextBoxFor(dv => documentoVenta.numero, htmlAttributes: new { @class = "form-control", type = "number", min = "0", Value = "" })
                        }
                        <!-- <span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el número los demás criterios no serán considerados al realizar la búsqueda.</span>-->
                    </div>

                </div>
            </div>


            <!--NUMERO GUIA-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="documentoVenta_numero" class="control-label col-xs-4">Número Guía Remisión:</label>

                    <div class="col-xs-8">
                        @if (documentoVenta.guiaRemision.numeroDocumento > 0)
                        {
                            @Html.TextBoxFor(dv => documentoVenta.guiaRemision.numeroDocumento, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
                        }
                        else
                        {
                            @Html.TextBoxFor(dv => documentoVenta.guiaRemision.numeroDocumento, htmlAttributes: new { @class = "form-control", type = "number", min = "0", Value = "" })
                        }
                        <!--<span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el número los demás criterios no serán considerados al realizar la búsqueda.</span>-->
                    </div>

                </div>
            </div>




            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="documentoVenta_numero" class="control-label col-xs-4">Número Pedido:</label>

                    <div class="col-xs-8">
                        @if (documentoVenta.pedido.numeroPedido > 0)
                        {
                            @Html.TextBoxFor(dv => documentoVenta.pedido.numeroPedido, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
                        }
                        else
                        {
                            @Html.TextBoxFor(dv => documentoVenta.pedido.numeroPedido, htmlAttributes: new { @class = "form-control", type = "number", min = "0", Value = "" })
                        }
                        <!--<span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el número los demás criterios no serán considerados al realizar la búsqueda.</span>---->
                    </div>

                </div>
            </div>




        </div>

        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.fechaEmisionDesde, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEmisionDesdetmp" value="@ViewBag.fechaEmisionDesde" />
                        <input class="form-control" type="text" id="documentoVenta_fechaEmisionDesde" name="documentoVenta_fechaEmisionDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.fechaEmisionHasta, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEmisionHastatmp" value="@ViewBag.fechaEmisionHasta" />
                        <input class="form-control" type="text" id="documentoVenta_fechaEmisionHasta" name="documentoVenta_fechaEmisionDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(dv => documentoVenta.estadoDocumentoSunatBusqueda, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.DropDownList("documentoVenta_estadoDocumentoSunatBusqueda",
                                 EnumHelper.GetSelectList(typeof(Model.DocumentoVenta.EstadosDocumentoSunatBusqueda), documentoVenta.estadoDocumentoSunatBusqueda),
                                 new { @class = "form-control" }
                                 )
                    </div>
                </div>
            </div>

        </div>


        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarBusqueda" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusqueda" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>

        <table id="tableFacturas" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idDocumentoVenta" data-visible="false"></th>
                    <th data-name="serieNumeroFactura" data-visible="true">Factura</th>
                    <th data-name="numeroPedido" data-visible="true">Pedido</th>
                    <th data-name="serieNumeroGuia" data-visible="true">Guia Remisión</th>
                    <th data-name="usuario" data-visible="true">Creada Por</th>
                    <th data-name="fechaEmision" data-sortable="true" data-breakpoints="xs">Fecha Emisión</th>
                    <th data-name="razonSocial" data-sortable="true">Razón Social</th>
                    <th data-name="ruc" data-sortable="false" data-breakpoints="xs">RUC</th>
                    <th data-name="sedeMP" data-sortable="false" data-breakpoints="xs">Sede MP</th>
                    <th data-name="total" data-sortable="true" data-breakpoints="xs">Total</th>
                    <th data-name="estado" data-sortable="true" data-breakpoints="xs">Estado</th>
                    @if (documentoVenta.usuario.apruebaAnulaciones)
                    {
                        <th data-name="comentarioSolicitudAnulacion" data-visible="true" data-sortable="true" data-breakpoints="xs">Comentario Solicitud Anulación</th>
                    }
                    else
                    {
                        <th data-name="comentarioSolicitudAnulacion" data-visible="false" data-sortable="true" data-breakpoints="xs">Comentario Solicitud Anulación</th>
                    }
                   <th data-name="opciones" data-sortable="false" data-breakpoints="xs"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        @if (documentoVentaList.Count == 0)
        {
            <div id="msgBusquedaSinResultados" style="display:none;" class="col-lg-12">
                <p class="pagination-centered" style=" font-size: medium" align="center">
                    La búsqueda no obtuvo resultados.
                </p>
            </div>
        }
    </form>
</div>




<div class="modal fade" id="modalOpcionesFactura" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalOpcionesFacturaTitle"><b>Opciones Factura</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>
                     
            <div class="modal-footer">
                @if (documentoVenta.usuario.creaDocumentosVenta || documentoVenta.usuario.visualizaDocumentosVenta)
                {
                    <button type="button" id="btnDescargarPDF" class="btn btn-secondary" data-dismiss="modal">Descargar</button>
                }
                @if (documentoVenta.usuario.creaDocumentosVenta || documentoVenta.usuario.visualizaDocumentosVenta)
                {
                    <button type="button" id="btnActualizarEstado" class="btn btn-primary">Actualizar Estado</button>
                }
                @if (documentoVenta.usuario.administraDocumentosVenta)
                {
                    <button type="button" id="btnAnularFactura" class="btn btn-danger" >Anular</button>
                }
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="modalAnulacion" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalAprobacionTitle"><b>Solicitud Anulación Factura</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>

            <div class="modal-body">
                <form class="form-horizontal">

                    <div class="row">
                        <div class="col-sm-6 col-lg-12">
                            <div class="form-group">
                                <label for="serieNumero" class="control-label col-xs-3">Número Factura:</label>
                                <div class="col-xs-9">
                                    <input class="form-control" type="text" id="serieNumero" disabled />
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-6 col-lg-12">

                            <!--MOTIVO ANULACION-->
                            <div class="form-group">
                                <label for="comentarioAnulado" class="control-label col-xs-3">Comentario:</label>

                                <div class="col-xs-9">
                                    <textarea class="form-control" rows="5" id="comentarioAnulado" name="comentarioAnulado"></textarea>
                                </div>
                            </div>
                        </div>

                        </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" id="btnCancelarAnulacion" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnAceptarAnulacion" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="modalAprobacionAnulacion" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalAprobacionTitle"><b>Aprobar Anulación Factura</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>

            <div class="modal-body">
                <form class="form-horizontal">

                    <div class="row">
                        <div class="col-sm-6 col-lg-12">
                            <div class="form-group">
                                <label for="serieNumero" class="control-label col-xs-3">Número Factura:</label>
                                <div class="col-xs-9">
                                    <input class="form-control" type="text" id="serieNumeroAprobacionAnulacion" disabled />
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-6 col-lg-12">

                            <!--MOTIVO ANULACION-->
                            <div class="form-group">
                                <label for="comentarioAprobacionAnulacion" class="control-label col-xs-3">Comentario:</label>

                                <div class="col-xs-9">
                                    <textarea class="form-control" rows="5" id="comentarioAprobacionAnulacion" name="comentarioAprobacionAnulacion"></textarea>
                                </div>
                            </div>
                        </div>

                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" id="btnCancelarAprobacionAnulacion" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnAprobarAnulacion" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/factura")
}
