@{
    ViewBag.Title = "Búsqueda -  Vista Dashboard";
    Model.VistaDashboard vistaDashboard = ViewBag.vistaDashboard;
   List<Model.VistaDashboard> listaVistaDashboard = ViewBag.listaVistaDashboard;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="idProducto" value="" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />

    <form class="form-horizontal">

        <div class="row">
            <div class="col-sm-6 col-lg-12">
                <div class="form-group">
                    
                        <div class="col-sm-12 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(dv => vistaDashboard.codigo, htmlAttributes: new { @class = "control-label col-xs-3 col-lg-3" })
                                <div class="col-xs-6">
                                    @Html.TextBoxFor(c => vistaDashboard.codigo, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-12 col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(dv => vistaDashboard.nombre, htmlAttributes: new { @class = "control-label col-xs-3 col-lg-3" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(c => vistaDashboard.nombre, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>                    

                </div>
            </div>
        </div>

        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarVistaDashboardBusqueda" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnVistaDashboardBusqueda" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>


        <table id="tableVistaDashboard" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idRol" data-visible="false"></th>
                    <th data-name="codigo" data-visible="true">Código</th>
                    <th data-name="nombre" data-visible="true" data-sortable="true">Nombre</th>

                    <th data-name="opciones" data-sortable="true" data-breakpoints="xs"></th>
                </tr>
            </thead>
            <tbody>
               
            </tbody>
        </table>
       
    </form>
</div>


@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/bundles/vistaDashboard")
}