@{
    ViewBag.Title = "Crear/Modificar Guía Remisión";
    Model.GuiaRemision guiaRemision = ViewBag.guiaRemision;
    Model.Transportista transportista = ViewBag.transportista;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">

    <input type="hidden" id="respuestaConfirmacion" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <input type="hidden" value="@ViewBag.debug" />
    <form class="form-horizontal">
        <input type="hidden" id="idGuiaRemision" name="idGuiaRemision" value="2" />


        <!--SEDE ORIGEN-->
        <div class="row">
            <!--SEDE MP-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.ciudadOrigen, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.nombre, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-8">
                <!--Dirección Origen-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.ciudadOrigen.direccionPuntoPartida, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="col-xs-10">
                        @if (guiaRemision.pedido.numeroPedido > 0)
                        {
                            @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.direccionPuntoPartida, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        }
                        else
                        {
                            @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.direccionPuntoPartida, htmlAttributes: new { @class = "form-control" })
                        }
                    </div>
                </div>
            </div>
        </div>




        <!--NUMEROS DOCUMENTO-->
        <div class="row">

            <div class="col-sm-6 col-lg-4">
                <!--fecha Movimiento-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.fechaMovimiento, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaMovimientotmp" value="@ViewBag.fechaMovimientotmp" />
                        <input class="form-control" type="text" id="guiaRemision_fechaMovimiento" name="guiaRemision_fechaMovimiento">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(p => guiaRemision.numeroDocumento, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="input-group col-xs-3">
                        <div class="input-group-addon">
                            <span class="input-group-text" id="basic-addon1">Serie:</span>
                        </div>
                        @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.serieGuiaRemision, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        <!--@Html.TextBoxFor(p => guiaRemision.serieDocumento, htmlAttributes: new { @class = "form-control" })-->
                    </div>
                    <div class="input-group col-xs-7">
                        <div class="input-group-addon">
                            <span class="input-group-text" id="basic-addon1">Número:</span>
                        </div>
                        @Html.TextBoxFor(p => guiaRemision.numeroDocumento, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>

        </div>


        <!--NUMEROS PEDIDO-->
        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <!--Numero Pedido-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.numeroPedido, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.pedido.numeroPedidoString, htmlAttributes: new { @class = "form-control", type = "number", min = "0", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <!--Numero Referencia Cliente-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.cliente, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.pedido.cliente, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <!--Numero Referencia Cliente-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "form-control", type = "number", min = "0", disabled = "disabled" })
                    </div>
                </div>
            </div>




        </div>

        <div class="row">


            <!--MOTIVO DE TRASLADO-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.motivoTraslado, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.DropDownList("motivoTraslado",
                                                          EnumHelper.GetSelectList(typeof(Model.GuiaRemision.motivosTraslado), guiaRemision.motivoTraslado),
                                                          new { @class = "form-control", disabled = "disabled" }
                                                          )
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="chkAtencionParcial" class="control-label col-xs-4">Atención Parcial:</label>
                    <div class="col-xs-8">
                        @if (guiaRemision.atencionParcial)
                        {
                            <input checked type="checkbox" id="guiaRemision_atencionParcial" name="guiaRemision_atencionParcial" />
                        }
                        else
                        {
                            <input type="checkbox" id="guiaRemision_atencionParcial" name="guiaRemision_atencionParcial" />
                        }



                        @if (guiaRemision.ultimaAtencionParcial)
                        {
                            <span class="form-control-static" id="descripcionUltimaAtencionParcial">(Última Atención Parcial)</span>
                        }
                        else
                        {
                            <span class="form-control-static" id="descripcionUltimaAtencionParcial"></span>
                        }


                    </div>

                </div>
            </div>



        </div>

        <fieldset>
            <legend id="divpedido_transportista">Entregar en:</legend>
            <!--DESTINO-->
            <div class="row">

                <div class="col-sm-6 col-lg-4">
                    <!--Numero Pedido-->
                    <div class="form-group">
                        @Html.LabelFor(p => guiaRemision.pedido.ubigeoEntrega.Departamento, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(p => guiaRemision.pedido.ubigeoEntrega.Departamento, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <!--Numero Pedido-->
                    <div class="form-group">
                        @Html.LabelFor(p => guiaRemision.pedido.ubigeoEntrega.Provincia, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(p => guiaRemision.pedido.ubigeoEntrega.Provincia, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <!--Numero Pedido-->
                    <div class="form-group">
                        @Html.LabelFor(p => guiaRemision.pedido.ubigeoEntrega.Distrito, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(p => guiaRemision.pedido.ubigeoEntrega.Distrito, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-6 col-lg-8">
                    <!--Dirección Destino-->
                    <div class="form-group">
                        @Html.LabelFor(g => guiaRemision.pedido.direccionEntrega.descripcion, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-10">
                            @Html.TextBoxFor(g => guiaRemision.pedido.direccionEntrega.descripcion, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>

            </div>

        </fieldset>


        <fieldset>
            <legend id="divpedido_transportista">Transporte:</legend>
            <div class="row">

                <div class="col-sm-6 col-lg-8">
                    <!--TRANSPORTISTA-->
                    <div class="form-group">
                        @Html.LabelFor(g => guiaRemision.transportista, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-9">
                            @Html.DropDownList("guiaRemision_transportista",
                                              new SelectList(guiaRemision.ciudadOrigen.transportistaList as IEnumerable<Model.Transportista>, "idTransportista", "descripcion", guiaRemision.transportista.idTransportista, null),
                                              "Seleccione Transportista",
                                              new { @class = "form-control" })
                        </div>
                        <div class="col-xs-2 col-lg-1">
                            <button id="btnAgregarTransportista" type="button" class="btn btn-primary bouton-image-add addTransportista" data-toggle="modal" data-target="#modalAgregarTransportista"></button>
                        </div>
                    </div>
                </div>



            </div>


            <div class="row">
                <!--TRANSPORTISTA ENTREGA -->
                <div class="col-sm-6 col-lg-8">
                    <div class="form-group">

                        <label for="pedido_transportista_descripcion" class="control-label col-xs-2">Datos Transportista:</label>

                        <div class="input-group col-xs-6">
                            <div class="input-group-addon">
                                <span class="input-group-text" id="basic-addon1">Nombre:</span>
                            </div>
                            @Html.TextBoxFor(g => guiaRemision.transportista.descripcion, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                        <div class="input-group col-xs-4">
                            <div class="input-group-addon">
                                <span class="input-group-text" id="basic-addon1">RUC:</span>
                            </div>
                            @Html.TextBoxFor(g => guiaRemision.transportista.ruc, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <!--brevete TRANSPORTISTA-->

                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <div class="input-group col-xs-12">
                            <div class="input-group-addon">
                                <span class="input-group-text" id="basic-addon1">Brevete:</span>
                            </div>
                            @Html.TextBoxFor(g => guiaRemision.transportista.brevete, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6 col-lg-8">
                    <div class="form-group">
                        <label for="pedido_transportista_descripcion" class="control-label col-xs-2"></label>
                        <div class="input-group col-xs-10">
                            <div class="input-group-addon">
                                <span class="input-group-text" id="basic-addon1">Dirección:</span>
                            </div>
                            @Html.TextBoxFor(g => guiaRemision.transportista.direccion, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                </div>


            </div>

            <div class="row">



                <!--PLACA VEHICULO-->
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(g => guiaRemision.placaVehiculo, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(g => guiaRemision.placaVehiculo, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-4">
                    <!--CERTIFICADO INSCRIPCION-->
                    <div class="form-group">
                        @Html.LabelFor(g => guiaRemision.certificadoInscripcion, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(g => guiaRemision.certificadoInscripcion, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>





        <table id="tableDetalleGuia" class="table" data-editing="true"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="true"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idProducto" data-visible="false"></th>
                    <th data-name="sku" data-sortable="false">Código</th>
                    <th data-name="cantidad" data-sortable="false" data-visible="true" data-breakpoints="xs sm">Cantidad</th>
                    <th data-name="presentacion" data-sortable="false" data-breakpoints="xs">Unidad</th>
                    <th data-name="producto" data-sortable="false">Producto</th>
                </tr>
            </thead>
            <tbody>

                @{int contador = 0;}
                @foreach (var documentoDetalle in guiaRemision.pedido.documentoDetalle)
                {
                    contador++;
                    <tr data-expanded="true">
                        <td>  @documentoDetalle.producto.idProducto</td>
                        <td>  @documentoDetalle.producto.sku</td>
                        <td class="@documentoDetalle.producto.idProducto detcantidad" style="text-align:right">@documentoDetalle.cantidad</td>
                        <td>  @documentoDetalle.unidad</td>
                        <td>  @documentoDetalle.producto.descripcion  </td>
                    </tr>
                }
            </tbody>
        </table>


        <div class="row">
            <!--OBSERVACIONES-->
            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.observaciones, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="col-xs-10">
                        <textarea class="form-control" rows="5" id="guiaRemision_observaciones" cols="100" name="guiaRemision_observaciones"></textarea>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="pull-right">
                <button type="button" id="btnCancelarGuiaRemision" class="btn btn-danger">Cancelar</button>
                <button id="btnFinalizarCreacionGuiaRemision" type="button" class="btn btn-success">Generar Guía Remisión</button>
            </div>
        </div>


    </form>
</div>


<div class="modal fade" id="modalAgregarTransportista" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalAgregarTransportistaTitle"><b>Nuevo Transportista</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>



            <div class="modal-body">
                <form class="form-horizontal">


                    <div class="row">

                        <div class="col-sm-6 col-lg-12">
                            <!--Nombre / Descripcion-->
                            <div class="form-group">
                                @Html.LabelFor(d => transportista.descripcion, htmlAttributes: new { @class = "control-label  col-xs-2" })
                                <div class="col-xs-10">
                                    @Html.TextBoxFor(d => transportista.descripcion, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="row">

                        <div class="col-sm-6 col-lg-12">
                            <!--Dirección-->
                            <div class="form-group">
                                @Html.LabelFor(d => transportista.direccion, htmlAttributes: new { @class = "control-label  col-xs-2" })
                                <div class="col-xs-10">
                                    @Html.TextBoxFor(d => transportista.direccion, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>


                    </div>


                    <div class="row">

                        <div class="col-sm-6 col-lg-6">
                            <!--CONTACTO-->
                            <div class="form-group">
                                @Html.LabelFor(d => transportista.ruc, htmlAttributes: new { @class = "control-label  col-xs-4" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(d => transportista.ruc, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-lg-6">
                            <!--TELEFONO-->
                            <div class="form-group">
                                @Html.LabelFor(d => transportista.telefono, htmlAttributes: new { @class = "control-label  col-xs-4" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(d => transportista.telefono, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>



                </form>
            </div>

            <div class="modal-footer">
                <button type="button" id="btnCancelTransportista" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnSaveTransportista" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
    </div>
</div>







@section Scripts {
    @Scripts.Render("~/bundles/guiaRemision")
}



