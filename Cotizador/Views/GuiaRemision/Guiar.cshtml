            <fieldset>
                <legend>Detalle del extorno:</legend>
                <div class="row">
                    <div class="col-sm-6 col-lg-8">
                        <!--Sustento-->
                        <div class="form-group">
                            @Html.LabelFor(g => guiaRemision.sustentoExtorno, htmlAttributes: new { @class = "control-label col-xs-2" })
                            <div class="col-xs-10">
