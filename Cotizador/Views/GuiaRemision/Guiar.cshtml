@{
    ViewBag.Title = "Crear/Modificar Guía Remisión";
    Model.GuiaRemision guiaRemision = ViewBag.guiaRemision;
    Model.Transportista transportista = ViewBag.transportista;
}



<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">

    <input type="hidden" id="respuestaConfirmacion" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <input type="hidden" value="@ViewBag.debug" />
    <input type="hidden" id="esGuiaDiferida" value="@(guiaRemision.esGuiaDiferida ? "1" : "0")" />
    <form class="form-horizontal">
        <input type="hidden" id="idGuiaRemision" name="idGuiaRemision" value="2" />


        <!--SEDE ORIGEN-->
        <div class="row">
            <!--SEDE MP-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.ciudadOrigen, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.nombre, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-8">
                <!--Dirección Origen-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.ciudadOrigen.direccionPuntoPartida, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="col-xs-10">
                        @if (guiaRemision.pedido.numeroPedido > 0)
                        {
                            @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.direccionPuntoPartida, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        }
                        else
                        {
                            @Html.TextBoxFor(g => guiaRemision.ciudadOrigen.direccionPuntoPartida, htmlAttributes: new { @class = "form-control" })
                        }
                    </div>
                </div>
            </div>
        </div>




        <!--NUMEROS DOCUMENTO-->
        <div class="row">



            <div class="col-sm-6 col-lg-4">
                <!--fecha Emision-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.fechaEmision, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEmisiontmp" value="@ViewBag.fechaEmisiontmp" />
                        <input class="form-control" type="text" id="guiaRemision_fechaEmision" name="guiaRemision_fechaEmision">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <!--fecha Traslado-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.fechaTraslado, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaTrasladotmp" value="@ViewBag.fechaTrasladotmp" />
                        <input class="form-control" type="text" id="guiaRemision_fechaTraslado" name="guiaRemision_fechaTraslado">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(p => guiaRemision.numeroDocumento, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.serieNumeroGuia, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        <br />
                        @if (false && guiaRemision.usuario.creaGuiasDiferidas)
                        {
                            if (guiaRemision.esGuiaDiferida)
                            {
                                <button id="btnCambiarASerieDiferida" type="button" class="btn btn-warning" style="display: none;">Atención Diferida</button>
                                <button id="btnCambiarASerieNormal" type="button" class="btn btn-info">Atención Normal</button>
                            }
                            else
                            {
                                <button id="btnCambiarASerieDiferida" type="button" class="btn btn-warning">Atención Diferida</button>
                                <button id="btnCambiarASerieNormal" type="button" class="btn btn-info" style="display: none;">Atención Normal</button>
                            }
                        }
                    </div>
                </div>
            </div>

        </div>






        <!--NUMEROS PEDIDO-->
        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <!--Numero Pedido-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.numeroPedido, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.pedido.numeroPedidoString, htmlAttributes: new { @class = "form-control", type = "number", min = "0", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <!-- Cliente-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.cliente, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.pedido.cliente, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <!--Numero Referencia Cliente-->
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(g => guiaRemision.pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>




        </div>

        <div class="row">


            <!--MOTIVO DE TRASLADO-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.motivoTraslado, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.DropDownList("motivoTraslado",
                                                        EnumHelper.GetSelectList(typeof(Model.GuiaRemision.motivosTraslado), guiaRemision.motivoTraslado),
                                                        new { @class = "form-control", disabled = "disabled" }
                                                        )
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">

                    @if (guiaRemision.notaIngresoAExtornar == null)
                    {<label for="guiaRemision_atencionParcial" class="control-label col-xs-4">Atención Parcial:</label>}
                    else
                    { <label for="guiaRemision_atencionParcial" class="control-label col-xs-4">Devolución Parcial:</label>}
                    <div class="col-xs-8">
                        @if (guiaRemision.atencionParcial)
                        {
                            <input checked type="checkbox" id="guiaRemision_atencionParcial" name="guiaRemision_atencionParcial" />
                        }
                        else
                        {
                            <input type="checkbox" id="guiaRemision_atencionParcial" name="guiaRemision_atencionParcial" />
                        }



                        @if (guiaRemision.ultimaAtencionParcial)
                        {
                            <span class="form-control-static" id="descripcionUltimaAtencionParcial">(Última Atención Parcial)</span>
                        }
                        else
                        {
                            <span class="form-control-static" id="descripcionUltimaAtencionParcial"></span>
                        }


                    </div>

                </div>
            </div>



        </div>

        <div class="row">

            <!--OBSERVACIOENS DEL PEDIDO-->
            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.pedido.observaciones, htmlAttributes: new { @class = "control-label col-xs-2", style = "color: darkred" })
                    <div class="col-xs-10">
                        @Html.TextAreaFor(g => guiaRemision.pedido.observaciones, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="archivoAdjunto" class="control-label col-xs-4">Archivos Adjuntos:</label>
                    <div class="col-xs-8">
                        <ul id="nombreArchivos">
                            @foreach (Model.PedidoAdjunto pedidoAdjunto in guiaRemision.pedido.pedidoAdjuntoList)
                            {
                                <li>
                                    <a href="javascript:m();" class="descargar">@pedidoAdjunto.nombre</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>

