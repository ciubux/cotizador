                    <th data-name="cantidadPendienteAtencion" data-sortable="false" data-visible="true" data-breakpoints="xs sm" style="width: 70px">Cant. Pend. Atención</th>
                    <th data-name="stockr" data-sortable="false" data-visible="true" data-breakpoints="xs sm" style="width: 70px">Stock</th>
                    <th data-name="cantidadPorAtender" data-sortable="false" data-visible="true" data-breakpoints="xs sm" style="width: 70px">Cantidad a Atender</th>
                    <th data-name="presentacion" data-sortable="false" data-breakpoints="xs">Unidad</th>
                    <th data-name="producto" data-sortable="false">Producto</th>
                </tr>
            </thead>
            <tbody>

                @{int contador = 0;}
                @foreach (var documentoDetalle in guiaRemision.documentoDetalle)
                {

                    <!--Bien o Bien Comodato-->
                    if ((int)documentoDetalle.producto.tipoProducto == 1 || (int)documentoDetalle.producto.tipoProducto == 2)
                    {



                        contador++;
                        <tr data-expanded="true" idProducto="@documentoDetalle.producto.idProducto" idProductoPresentacion="@(documentoDetalle.ProductoPresentacion == null ? 0 : documentoDetalle.ProductoPresentacion.IdProductoPresentacion)">
                            <td>  @documentoDetalle.producto.idProducto</td>
                            <td>  @documentoDetalle.producto.sku</td>
                            <!--<td class="@documentoDetalle.producto.idProducto" style="text-align:right">@documentoDetalle.cantidadSolicitada</td>-->

                            <td class="@documentoDetalle.producto.idProducto detcantidadSaldo" style="text-align:right">@documentoDetalle.cantidadPendienteAtencionPermitida</td>
                            <td class="@documentoDetalle.producto.idProducto detStock" style="text-align:right; font-weight: bold;">...</td>
                            <td class="@documentoDetalle.producto.idProducto detcantidad" style="text-align:right">@documentoDetalle.cantidadPorAtenderPermitida</td>
                            <td>  @documentoDetalle.unidad</td>
                            <td>
                                @documentoDetalle.producto.descripcion
                                @if (documentoDetalle.producto.descripcionLarga != null && !documentoDetalle.producto.descripcionLarga.Trim().IsEmpty())
                                {
                                    string descripcionLargaInfo = Html.Partial("../Producto/_LabelDescripcionLarga").ToString();
                                    descripcionLargaInfo = descripcionLargaInfo.Replace("_DATA_TIPSO_", documentoDetalle.producto.descripcionLarga);
                                    descripcionLargaInfo = descripcionLargaInfo.Replace("_CLASS_TOOLTIP_", "tooltip-motivo-restriccion");

                                    @Html.Raw(descripcionLargaInfo)
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>


        <div class="row">
            <!--OBSERVACIONES-->
            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(g => guiaRemision.observaciones, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="col-xs-10">
                        @Html.TextBoxFor(g => guiaRemision.observaciones, htmlAttributes: new { @class = "form-control" })
                        <!--<textarea class="form-control" rows="5" id="guiaRemision_observaciones" cols="100" name="guiaRemision_observaciones"></textarea>-->
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="pull-right">
                <button type="button" id="btnCancelarGuiaRemision" class="btn btn-danger">Cancelar</button>
                <button id="btnFinalizarCreacionGuiaRemision" type="button" class="btn btn-success">Generar Guía Remisión</button>
            </div>
        </div>


    </form>
</div>


