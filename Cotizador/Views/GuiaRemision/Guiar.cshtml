                            <div class="col-xs-8 col-lg-9">
                                @Html.DropDownList("guiaRemision_pedido_direccionEntrega",
                                                                     new SelectList(guiaRemision.pedido.cliente.direccionEntregaList as IEnumerable<Model.DireccionEntrega>, "idDireccionEntrega", "descripcion", guiaRemision.pedido.direccionEntrega.idDireccionEntrega, null),
                                                                     "Seleccione Dirección de Entrega",
                                                                     new { @class = "form-control" })
                            </div>
                            <!--   <div class="col-xs-2 col-lg-1">
