@{
    ViewBag.Title = "Búsqueda Guías Remisión";
    Model.GuiaRemision guiaRemision = ViewBag.guiaRemision;
    List<Model.GuiaRemision> guiaRemisionList = ViewBag.guiaRemisionList;
    Model.Pedido pedido = ViewBag.pedido;
    Model.DocumentoVenta documentoVenta = ViewBag.documentoVenta;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <input type="hidden" id="idClienteFacturacion" value="" />
    

    <form class="form-horizontal">

        <div class="row">
            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => guiaRemision.ciudadOrigen, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                                           new
                                           {
                                               ciudadSelectId = "idCiudad",
                                               selectedValue = guiaRemision.ciudadOrigen.idCiudad
                                           })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-5">
                <!--Cliente-->
                <div class="form-group">
                    <label for="idCliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                        {
                            <option selected value="@guiaRemision.pedido.cliente.idCliente">@guiaRemision.pedido.cliente</option>
                    }
                    else
                    {
                        <option value=""></option>
                }
                        </select>
                    </div>
                </div>

            </div>



        </div>

        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => guiaRemision.fechaTrasladoDesde, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaTrasladoDesdetmp" value="@ViewBag.fechaTrasladoDesde" />
                        <input class="form-control" type="text" id="guiaRemision_fechaTrasladoDesde" name="guiaRemision_fechaTrasladoDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => guiaRemision.fechaTrasladoHasta, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaTrasladoHastatmp" value="@ViewBag.fechaTrasladoHasta" />
                        <input class="form-control" type="text" id="guiaRemision_fechaTrasladoHasta" name="guiaRemision_fechaTrasladoHasta">
                    </div>
                </div>
            </div>
        </div>



        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarBusquedaGuiasFacturaConsolidada" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusquedaGuiasFacturaConsolidada" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>

