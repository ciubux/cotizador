<div class="modal fade" id="modalVerPeriodo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalVerPeriodo"><b>Información del Periodo</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>


            <div class="modal-body">
                <form class="form-horizontal">
                    <input type="hidden" id="verIdPeriodo" />
                    <div class="row">

                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(c => obj.nombre, htmlAttributes: new { @class = "control-label col-xs-4" })
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verNombre"></p>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(c => obj.Estado, htmlAttributes: new { @class = "control-label col-xs-4" })
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verEstado"></p>
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="row">

               

                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(c => obj.fechaInicio, htmlAttributes: new { @class = "control-label col-xs-4" })
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verFechaInicio"></p>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(c => obj.fechaFin, htmlAttributes: new { @class = "control-label col-xs-4" })
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verFechaFin"></p>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                            </div>
                        </div>
                    </div>


                    <div id="cliente_precios" class="tab-pane fade">
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="onoffswitch">
                                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="chkSoloCanasta">
                                    <label class="onoffswitch-label" for="chkSoloCanasta"></label>
                                </div>
                                <h5 id="lblChkCanasta" style="width: 80%; margin-left: 45px; margin-top: -22px; font-weight:bold; cursor:pointer;" class="text-muted">Ver solo canasta de compra habitual</h5>

                            </div>
                        </div>

                        <table id="tableListaPrecios" class="table" data-editing="false"
                               data-editing-allow-add="false"
                               data-editing-allow-delete="false"
                               data-editing-allow-edit="false"
                               data-show-toggle="false">
                            <thead>
                                <tr>
                                    <th data-name="idProducto" data-visible="false"></th>
                                    <th data-name="canasta" class="listaPreciosCanasta" data-sortable="false">Pertenece <br />Canasta<br />Habitual</th>
                                    <th data-name="proveedor" data-sortable="false">Prov.</th>
                                    <th data-name="codigo" data-sortable="false" data-breakpoints="xs">Código</th>
                                    <th data-name="producto" data-sortable="false">Producto / Descripción</th>
                                    <th data-name="presentacion" data-sortable="false" data-breakpoints="xs">Unidad</th>
                                    <th data-name="imagen" data-sortable="false" data-breakpoints="xs sm">Imagen</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <div class="pull-right">
                    <button type="button" id="btnCancelarVerPeriodo" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnEditarPeriodo" class="btn btn-primary ">Editar</button>
                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/bundles/periodoSolicitud")
}
