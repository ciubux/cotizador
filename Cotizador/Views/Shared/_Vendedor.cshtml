@model Cotizador.Models.VendedorViewModels

@if (Model.Disabled)
{
    @Html.DropDownList(
                Model.VendedorSelectId,
                Model.Vendedores, "Seleccione",
                new
                {
                    id = Model.VendedorSelectId,
                    @name = Model.VendedorSelectId,
                    @class = "form-control",
                    @prevvalue = Model.SelectedValue,
                    @mostrarformchr = Model.mostrarFormCHR,
                    @disabled = "disabled"
                })
}
else
{
    @Html.DropDownList(
            Model.VendedorSelectId,
            Model.Vendedores, "Seleccione",
            new
            {
                id = Model.VendedorSelectId,
                @name = Model.VendedorSelectId,
                @prevvalue = Model.SelectedValue,
                @mostrarformchr = Model.mostrarFormCHR,
                @class = "form-control"

            })
}
