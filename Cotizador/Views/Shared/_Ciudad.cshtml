@model Cotizador.Models.CiudadViewModels

@if (Model.incluirSeleccione)
{
    if (Model.disabled != null && Model.disabled.Equals("disabled"))
    {
        @Html.DropDownList(
            Model.CiudadSelectId,
            Model.Ciudades, "Seleccione la sede",
            new
            {
                id = Model.CiudadSelectId,
                @class = "form-control",
                @disabled = Model.disabled
            })
    }
    else
    {
        @Html.DropDownList(
            Model.CiudadSelectId,
            Model.Ciudades, "Seleccione la sede",
            new
            {
                id = Model.CiudadSelectId,
                @class = "form-control"
            })
    }

}
else
{
    if (Model.disabled != null && Model.disabled.Equals("disabled"))
    {
        @Html.DropDownList(
                        Model.CiudadSelectId,
                        Model.Ciudades,
                        new
                        {
                            id = Model.CiudadSelectId,
                            @class = "form-control",
                            @disabled = Model.disabled
                        })
    }
    else
    {
        @Html.DropDownList(
                    Model.CiudadSelectId,
                    Model.Ciudades,
                    new
                    {
                        id = Model.CiudadSelectId,
                        @class = "form-control"
                    })
    }
}