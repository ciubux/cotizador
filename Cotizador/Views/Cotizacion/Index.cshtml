                                <label for="verFechaCreacion" class="control-label col-xs-4">Fecha Última Edición:</label>
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verFechaCreacion"></p>
                                </div>
                            </div>
                        </div>
                        <!--FECHA VALIDEZ OFERTA-->
