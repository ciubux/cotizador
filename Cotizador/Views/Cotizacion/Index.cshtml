                        </div>

                        <!--Modificado POR-->
                        <div class="col-sm-6 col-lg-3">
                            <div class="form-group">
                                <label for="verModificadoPor" class="control-label col-xs-4">Modificada Por:</label>
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verModificadoPor"></p>
                                </div>
                            </div>
                        </div>
                        <!--Observación Estado-->
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="verObservacionEstado" class="control-label col-xs-2">Comentario Estado:</label>
                                <div class="col-xs-10">
                                    <p class="form-control-static" id="verObservacionEstado">
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>


                    <table id="tableDetalleCotizacion" class="table" data-editing="false"
                           data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
                           data-editing-allow-add="false"
                           data-editing-allow-delete="false"
                           data-editing-allow-edit="false"
                           data-sorting="true"
                           data-show-toggle="false"
                           data-editing-hide-text="Finalizar edición"
                           data-editing-add-text="Descartar cambios">
                        <thead>
                            <tr>
                                <th data-name="proveedor" data-sortable="false">Prov.</th>
                                <th data-name="codigo" data-sortable="false" data-breakpoints="xs">Código</th>
                                <th data-name="producto" data-sortable="false">Producto / Descripción</th>
                                <th data-name="presentacion" data-sortable="false" data-visible="true" data-breakpoints="xs">Unidad</th>
                                <th data-name="imagen" data-sortable="false" data-breakpoints="xs">Imagen</th>
                                <th data-name="precioLista" data-sortable="false" data-breakpoints="xs">Precio Lista</th>
                                <th data-name="porcentajeDescuentoMostrar" data-sortable="false" data-breakpoints="xs">Dscto % al P. Lista</th>
                                <th data-name="precioNeto" data-sortable="false" data-breakpoints="xs">Precio Neto</th>
                                @if (cotizacion.usuario.apruebaCotizaciones)
    {
                            <th data-name="costo" data-sortable="false" data-breakpoints="xs" style="width:60px">Costo</th>
}
else
{
                            <th data-name="costo" data-visible="false" data-breakpoints="xs" style="width:60px">Costo</th>
}
                                <th data-name="margen" data-sortable="false" data-breakpoints="xs" style="width:60px">Mg %</th>
                                <th data-name="flete" data-sortable="false" data-breakpoints="xs">Flete</th>
                                <th data-name="precioUnitario" data-sortable="false" data-breakpoints="xs">Precio Unit.</th>
                                <th data-name="cantidad" data-sortable="false" data-visible="true" data-breakpoints="xs">Cant.</th>
                                <th data-name="subTotal" data-sortable="false" data-visible="true" data-breakpoints="xs">Sub Total</th>
                                <th data-name="observaciones" data-sortable="false" data-visible="true" data-breakpoints="xs">Observaciones</th>
