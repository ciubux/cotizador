@{
    ViewBag.Title = "Búsqueda Cotizaciones";
    Model.Cotizacion cotizacion = ViewBag.cotizacion;
    List<Model.Cotizacion> cotizacionList = ViewBag.cotizacionList;

}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <form class="form-horizontal">

        <div class="row">
            <!--NÚMERO COTIZACION-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="numero" class="control-label col-xs-4">Número:</label>
                    <div class="col-xs-8">
                        @if (cotizacion.codigo > 0)
                        {
                            <input class="form-control" type="number" value="@cotizacion.codigo" min="0" id="numero" name="numero">
                        }
                        else
                        {
                            <input class="form-control" type="number" value="" min="0" id="numero" name="numero">
                        }
                        <span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el número los demás criterios no serán considerados al realizar la búsqueda.</span>
                    </div>

                </div>

            </div>

            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => cotizacion.ciudad, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                             new
                             {
                                 ciudadSelectId = "idCiudad",
                                 selectedValue = cotizacion.ciudad.idCiudad
                             })
                    </div>
                </div>
            </div>


        </div>



        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="fechaDesde" class="control-label col-xs-4" ¨>Última Edición Desde:</label>
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaDesdetmp" value="@ViewBag.fechaDesde" />
                        <input class="form-control" type="text" id="fechaDesde" name="fechaDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="fechaHasta" class="control-label col-xs-4">Última Edición Hasta:</label>
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaHastatmp" value="@ViewBag.fechaHasta" />
                        <input class="form-control" type="text" id="fechaHasta" name="fechaHasta">
                    </div>
                </div>
            </div>


        </div>

        <div class="row">

            <div class="col-sm-6 col-lg-5">
                <!--Cliente-->
                <div class="form-group">
                    <label for="idCliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                            {
                                <option selected value="@ViewBag.idClienteGrupo">@ViewBag.clienteGrupo</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>
                </div>

            </div>




            <!--ESTADO-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="estado" class="control-label col-xs-4">Estado:</label>
                    <div class="col-xs-8">
                        @Html.DropDownList("estado",
                                                     EnumHelper.GetSelectList(typeof(Model.SeguimientoCotizacion.estadosSeguimientoCotizacion), cotizacion.seguimientoCotizacion.estado),
                                                     new { @class = "form-control" }
                                                     )
                    </div>
                </div>
            </div>
        </div>

        @if (cotizacion.usuario.apruebaCotizaciones)
        {
            <div class="row">

                <div class="col-sm-6 col-lg-5">
                    <!--USUARIO-->
                    <div class="form-group">
                        <label for="Usuario" class="control-label col-xs-4">Usuario:</label>
                        <div class="col-xs-8">
                            @Html.Action("usuariosCotizacionList", "Usuario")
                        </div>
                    </div>

                </div>
            </div>
        }

        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarBusquedaCotizaciones" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusquedaCotizaciones" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>


        <table id="tableCotizaciones" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idCotizacion" data-visible="false"></th>
                    <th data-name="codigo" data-visible="true">N°</th>
                    <th data-name="usuario" data-visible="true">Creado por</th>
                    <th data-name="fecha" data-sortable="true">Fecha Última Edición</th>
                    <th data-name="razonSocial" data-sortable="true">Razón Social</th>
                    <th data-name="ruc" data-sortable="false" data-breakpoints="xs">RUC</th>
                    <th data-name="ciudad" data-sortable="false" data-breakpoints="xs">Ciudad</th>
                    <th data-name="subtotal" data-visible="false" data-sortable="true" data-breakpoints="xs">Sub Total</th>
                    <th data-name="igv" data-visible="false" data-sortable="true" data-breakpoints="xs">IGV</th>
                    <th data-name="total" data-sortable="true" data-breakpoints="xs">Total</th>
                    <th data-name="maximoPorcentajeDescuento" data-sortable="true" data-breakpoints="xs">Desc % (max)</th>
                    <th data-name="minimoMargen" data-visible="false" data-sortable="true" data-breakpoints="xs">Mg % (min)</th>
                    <th data-name="estado" data-sortable="true" data-breakpoints="xs">Estado</th>
                    <th data-name="aprobador" data-sortable="true" data-breakpoints="xs">Modificado última vez por</th>
                    <th data-name="observacion" data-sortable="true" data-breakpoints="xs">Comentario Estado</th>
                    <th data-name="historialPrecios" data-sortable="true" data-breakpoints="xs">Historial Precios</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        @if (cotizacionList.Count == 0)
        {
            <div id="msgBusquedaSinResultados" style="display:none;" class="col-lg-12">
                <p class="pagination-centered" style=" font-size: medium" align="center">
                    La búsqueda no obtuvo resultados.
                </p>
            </div>
        }



    </form>
</div>


