                        <!--FECHA FIN VIGENCIA PRECIOS-->
                        <div class="col-sm-6 col-lg-3">
                            <div class="form-group">
                                <label for="idCiudad" class="control-label col-xs-4">Fin Vigencia Precios:</label>
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verFechaFinVigenciaPrecios"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!--Estado-->
                        <div class="col-sm-6 col-lg-3">
                            <div class="form-group">
                                <label for="verEstado" class="control-label col-xs-4">Estado:</label>
                                <div class="col-xs-8">
                                    <p class="form-control-static" id="verEstado"></p>
                                </div>
