                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                    <div class="row" style="margin-right: 10px">
                        <div class="col-sm-6 col-lg-9">
                            <div class="form-group">
                                <label for="verObservaciones" class="control-label col-xs-2">Observaciones:</label>
                                <div class="col-xs-10">
                                    <p class="form-control-static" id="verObservaciones">
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3" id="montosTotalesDiv">

                            <div class="form-group">
                                <div class="pull-right">
                                    <span class="totales">Subtotal: S/ </span>
                                    <span class="totales" id="verMontoSubTotal"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="pull-right">
                                    <span class="totales">IGV 18%: S/ </span>
                                    <span class="totales" id="verMontoIGV"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="pull-right">
                                    <span class="totales">TOTAL: S/ </span>
                                    <span class="totales" id="verMontoTotal"></span>
                                </div>
                            </div>

                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <div class="pull-left">
                    @if (cotizacion.usuario.creaCotizaciones || cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnReCotizacion" class="btn btn-primary">Recotizar</button>
                    }
                    @if (cotizacion.usuario.visualizaCotizaciones || cotizacion.usuario.creaCotizaciones || cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnPDFCotizacion" class="btn btn-primary bouton-image pdfBoton">PDF</button>
                    }
                </div>



                <div class="pull-right">
                    <button type="button" id="btnCancelarCotizacion" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    @if (cotizacion.usuario.creaCotizaciones || cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnEditarCotizacion" class="btn btn-primary">Editar</button>
                    }
                    @if (cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnAprobarCotizacion" class="btn btn-success" data-toggle='modal' data-target='#modalAprobacion'>Aprobar</button>
                    }
                    @if (cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnDenegarCotizacion" class="btn btn-danger" data-toggle='modal' data-target='#modalAprobacion'>Denegar</button>
                    }
                    @if (cotizacion.usuario.creaCotizaciones || cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnAceptarCotizacion" class="btn btn-success" data-toggle='modal' data-target='#modalAprobacion'>Cliente Aceptó</button>
                    }
                    @if (cotizacion.usuario.creaCotizaciones || cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnRechazarCotizacion" class="btn btn-danger" data-toggle='modal' data-target='#modalAprobacion'>Cliente Rechazó</button>
                    }
                    @if (cotizacion.usuario.tomaPedidos)
                    {
                        <button type="button" id="btnGenerarPedido" class="btn btn-success">Generar Pedido</button>
                    }
                    @if (cotizacion.usuario.creaCotizaciones || cotizacion.usuario.apruebaCotizaciones)
                    {
                        <button type="button" id="btnEliminarCotizacion" class="btn btn-danger" data-toggle='modal' data-target='#modalAprobacion'>Eliminar</button>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

