        <div class="row" style="margin-bottom:10px; margin-right:0px; margin-left:10px">

            <div class="pull-left">
                @if (cotizacion.mostrarCosto)
                {
                <input checked type="checkbox" id="mostrarCosto" name="mostrarCosto" />
                }
