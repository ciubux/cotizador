                    @if (pedido.usuario.liberaPedidos)
                    {
                        <button type="button" id="btnLiberarPedido" class="btn btn-success" data-toggle='modal' data-target='#modalLiberacion'>Liberar</button>
                    }
                    @if (pedido.usuario.bloqueaPedidos)
                    {
                        <button type="button" id="btnBloquearPedido" class="btn btn-danger" data-toggle='modal' data-target='#modalLiberacion'>Bloquear</button>
                    }
                </div>



                <div class="pull-right">
                    <button type="button" id="btnCancelarVerPedido" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    @if (pedido.usuario.tomaPedidos || pedido.usuario.apruebaPedidos)
                    {
                        <button type="button" id="btnActualizarPedido" class="btn btn-primary" data-toggle='modal' data-target='#modalActualizarPedido'>Observaciones y Adjuntos</button>
                        <button type="button" id="btnEditarPedido" class="btn btn-primary ">Editar</button>
                    }
                    @if (pedido.usuario.apruebaPedidos)
                    {
                        <button type="button" id="btnAprobarIngresoPedido" class="btn btn-success" data-toggle='modal' data-target='#modalAprobacion'>Aprobar</button>
                    }
                    @if (pedido.usuario.apruebaPedidos)
                    {
                        <button type="button" id="btnDenegarIngresoPedido" class="btn btn-danger" data-toggle='modal' data-target='#modalAprobacion'>Denegar</button>
                    }

                    @if (pedido.usuario.programaPedidos)
                    {
                        <button type="button" id="btnProgramarPedido" class="btn btn-success" data-toggle='modal' data-target='#modalProgramacion'>Programar</button>
                    }

                    @if (pedido.usuario.creaGuias)
                    {
                        <button type="button" id="btnCancelarProgramacionPedido" class="btn btn-danger" data-toggle='modal' data-target='#modalAprobacion'>Cancelar Programación</button>
