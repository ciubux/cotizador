                    {
                        <button type="button" id="btnVerAtenciones" class="btn btn-primary" data-toggle='modal' data-target='#modalVerGuiasRemision'>Ver Guías Remisión</button>
                    }
                    @if (pedido.usuario.tomaPedidos || pedido.usuario.apruebaPedidos)
                    {
                        <button type="button" id="btnEliminarPedido" class="btn btn-danger" data-toggle='modal' data-target='#modalAprobacion'>Eliminar</button>
                    }
