@{
    ViewBag.Title = "Cargar Pedidos";
    Model.Pedido pedido = ViewBag.pedido;
    Model.GuiaRemision guiaRemision = ViewBag.guiaRemision;
    List<Model.Pedido> pedidoList = ViewBag.pedidoList;
    Model.DocumentoVenta documentoVenta = ViewBag.documentoVenta;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="idPedido" value="" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <input type="hidden" id="esCliente" value="@pedido.usuario.esCliente" />

    <form class="form-horizontal">

        <div class="row">

            <div class="col-sm-6 col-lg-4">
                <!--CLIENTE-->
                <div class="form-group">
                    <label for="cliente" class="control-label col-xs-4">Cliente:</label>
                    <div class="col-xs-8">
                        @Html.Action("clientesCargarPedidoList", "Cliente")
                    </div>
                </div>
            </div>



            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="archivoAdjunto" class="control-label col-xs-4">Archivo:</label>
                    <div class="col-xs-8">
                        <div class="upload-btn-wrapper">
                            <button class="btn btn-primary">Seleccionar Archivo</button>
                            <input type="file" class="form-control" name="filePedidos" id="filePedidos" accept=".*">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <div class="col-xs-12">
                        <ul id="nombreArchivos">
                            <!--<li>
                                <a href="javascript:mostrar();" class="descargar"></a>
                                <a href="javascript:mostrar();"><img src="~/images/icon-close.png" class="btnDeleteArchivo" /></a>
                            </li>-->
                        </ul>
                    </div>
                </div>
            </div>


        </div>


        <div class="row">
            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    <label for="pedido_observaciones" class="control-label col-xs-2">Comentario:</label>
                    
                    <div class="col-xs-10">
                        @Html.TextAreaFor(p => pedido.observaciones, htmlAttributes: new { @class = "form-control", rows = "6", cols = "300", style = "min-width: 100%" })
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
          

            <div class="pull-right">
                <button type="button" id="btnCancelarPedido" class="btn btn-danger">Cancelar</button>
                <button id="btnFinalizarCreacionPedido" type="button" class="btn btn-success">Cargar</button>
            </div>
        </div>

    </form>
</div>


