@{
    ViewBag.Title = "Vendedor - Búsqueda";
    Model.Vendedor vendedor = ViewBag.vendedor;
    List<Model.Vendedor> vendedorList = ViewBag.vendedorList;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="idProducto" value="" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />

    <form class="form-horizontal">

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(c => vendedor.codigo, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(c => vendedor.codigo, htmlAttributes: new { @class = "form-control" })
                        <span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el código los otros criterios no serán considerados en la búsqueda. <br />Puede usar '%' como comodín al final. Ej: "L%"</span>
                    </div>
                </div>
            </div>


            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(c => vendedor.descripcion, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(c => vendedor.descripcion, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>


            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(c => vendedor.email, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(c => vendedor.email, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(dv => vendedor.ciudad, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                    new
                    {
                        ciudadSelectId = "vendedor_idCiudad",
                        selectedValue = vendedor.ciudad.idCiudad
                    })
                    </div>
                </div>
            </div>


            <div class="col-sm-6 col-lg-4">
                <div class="form-group">

                    @Html.LabelFor(c => vendedor.estado, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">

                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (vendedor.estado == 1)
                                {
                                    <input class="radio-input" checked type="radio" name="vendedor_estado" id="vendedor_estado_si" value="1"><span>Activo</span>
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="vendedor_estado" id="vendedor_estado_si" value="1"><span>Activo</span>
                                }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (vendedor.estado == 0)
                                {
                                    <input class="radio-input" checked type="radio" name="vendedor_estado" id="vendedor_estado_no" value="0"><span>Inactivo</span>
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="vendedor_estado" id="vendedor_estado_no" value="0"><span>Inactivo</span>
                                }
                            </label>
                        </div>
                    </div>

                </div>
            </div>

        </div>

        <div class="pull-right" style="margin-bottom:10px; margin-right:15px">
            <button id="btnLimpiarBusquedaVendedor" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusqueda" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>



            <table id="tableVendedores" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
                   data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
                   data-editing-allow-add="false"
                   data-editing-allow-delete="false"
                   data-editing-allow-edit="false"
                   data-sorting="true"
                   data-show-toggle="false"
                   data-editing-hide-text="Finalizar edición"
                   data-editing-add-text="Descartar cambios">

                <thead>
                    <tr>
                        <th data-name="idVendedor" data-visible="false"></th>
                        <th data-name="descripcion" data-visible="true" data-sortable="true">Nombre</th>
                        <th data-name="codigo" data-visible="true">Codigo</th>
                        <th data-name="cargo" data-visible="true">Cargo</th>
                        <th data-name="estado" data-visible="true">Estado</th>
                        <th data-name="email" data-visible="true">Email</th>
                        <th data-name="sede" data-visible="true">Sede</th>
                        <th data-name="estado" data-visible="true">Max. desct. de aprobación</th>

                        <th data-name="opciones" data-sortable="true" data-breakpoints="xs"></th>
                    </tr>
                </thead>


                <tbody></tbody>
            </table>
    </form>
</div>

@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/bundles/vendedor")
}


