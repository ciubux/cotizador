@{
    ViewBag.Title = "Mensaje - Lista";
    Model.Mensaje mensaje = ViewBag.Mensaje;
    //List<Model.Mensaje> mensajeList = ViewBag.mensajeList;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="idMensaje" value="" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />

    <form class="form-horizontal">


        <div class="row">

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(c => mensaje.fechaCreacionMensaje, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input class="form-control" type="text" id="mensaje_fechaCreacionMensaje" name="fechaHasta" value="@mensaje.fechaCreacionMensaje" autocomplete="off">

                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(c => mensaje.fechaVencimientoMensaje, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input class="form-control" type="text" id="mensaje_fechaVencimientoMensaje" name="fechaHasta" value="@mensaje.fechaVencimientoMensaje" autocomplete="off">

                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4">
                <div class="form-group">

                    <div class="row">
                        <!--codigo-->
                        @Html.LabelFor(c => mensaje.estado, htmlAttributes: new { @class = "control-label col-xs-4" })
                        <div class="col-xs-8">

                            <div class="radio radio-inline">
                                <label class="radio-label">
                                    @if (mensaje.estado == 1)
                                    {
                                        <input class="radio-input" checked type="radio" name="mensaje_estado" id="mensaje_estado_si" value="1"><span>Activo</span>
                                    }
                                    else
                                    {
                                        <input class="radio-input" type="radio" name="mensaje_estado" id="mensaje_estado_si" value="1"><span>Activo</span>
                                    }

                                </label>
                            </div>
                            <div class="radio radio-inline">
                                <label class="radio-label">
                                    @if (mensaje.estado == 0)
                                    {
                                        <input class="radio-input" checked type="radio" name="mensaje_estado" id="mensaje_estado_no" value="0"><span>Inactivo</span>
                                    }
                                    else
                                    {
                                        <input class="radio-input" type="radio" name="mensaje_estado" id="mensaje_estado_no" value="0"><span>Inactivo</span>
                                    }
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row pull-right" style="margin-bottom:10px; margin-right:15px">
            <button id="btnLimpiarBusquedaMensaje" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusquedaMensaje" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>



        <table id="tableMensaje" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">

            <thead>
                <tr>
                    <th data-name="id_mensaje" data-visible="false"></th>
                    <th data-name="titulo" data-visible="true" data-sortable="true">Titulo del mensaje</th>
                    <th data-name="nombre" data-visible="true">Usuario</th>
                    <th data-name="fecha_creacion" data-visible="true">Fecha de Creación</th>
                    <th data-name="fecha_inicio" data-visible="true">Fecha de Inicio</th>
                    <th data-name="fecha_vencimiento" data-visible="true">Fecha de Vencimiento</th>
                    <th data-name="opciones" data-sortable="true" data-breakpoints="xs"></th>
                </tr>
            </thead>


            <tbody></tbody>
        </table>
    </form>
</div>
