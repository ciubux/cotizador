@model IEnumerable<Model.Usuario>

@Html.DropDownList("usuario",
new SelectList(Model, "idUsuario", "nombre", ((Model.Pedido)this.Session["pedidoBusqueda"]).usuarioBusqueda.idUsuario, ViewBag.List as IEnumerable<Model.Usuario>),
new { @class = "form-control ", onchange = @"
$.ajax({
url: '/Pedido/updateUsuario',
type: 'POST',
dataType: 'JSON',
data: {
    usuario: this.value
}
});
" })