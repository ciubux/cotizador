                    <th data-name="numeroDocumento" data-visible="true" data-sortable="true">N° Doc.</th>
                    <th data-name="sedeMP" data-sortable="false" data-breakpoints="xs">Sede MP</th>
                    <th data-name="grupo" data-sortable="false" data-breakpoints="xs">Grupo</th>
                    <th data-name="vendedorAsignado" data-visible="true" data-sortable="true">¿Asesor Validado?</th>
                    <th data-name="asesorComercial" data-visible="true" data-sortable="true">Asesor Comercial</th>
