@{
    ViewBag.Title = "Permisos";
    Model.Permiso permiso = ViewBag.permiso;
    List<Model.Permiso> permisos = ViewBag.permisos;
    List<Model.CategoriaPermiso> categorias = ViewBag.categorias;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="idPermiso" value="" />
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />

    <form class="form-horizontal">

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(c => permiso.categoriaPermiso, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <select id="categoriaPermiso" class="form-control">
                            <option value="">Todas</option>
                            @foreach (Model.CategoriaPermiso cat in categorias)
                            {
                                <option value="@cat.descripcion">@cat.descripcion</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(c => permiso.descripcion_corta, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(c => permiso.descripcion_corta, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        @*<div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarBusqueda" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusqueda" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>*@

        <div class="row pull-left" style="margin-bottom:10px; margin-left:0px;">
            <button type="button" class="btn btn-primary  bouton-image botonExcel botonExcelExportAction" actionLink="@Url.Action("ExportMatrizPermisosRoles", "Permiso")">Matriz de Roles</button>
            <button type="button" class="btn btn-primary  bouton-image botonExcel botonExcelExportAction" actionLink="@Url.Action("ExportMatrizPermisosUsuarios", "Permiso")">Matriz de Usuarios</button>
        </div>

        <table id="tablePermisos" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Permiso'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idPermiso" data-visible="false"></th>
                    <th data-name="categoria" data-visible="true">Categoría</th>
                    <th data-name="codigo" data-visible="true">Código</th>
                    <th data-name="descripcion_larga" data-visible="true">Nombre</th>
                    <th data-name="descripcion_larga" data-visible="true">Descripción</th>
                    <th data-name="opciones" data-sortable="true" data-breakpoints="xs"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Permiso per in permisos)
                {
                    <tr data-expanded="true">
                        <td>@per.idPermiso</td>
                        <td isSearchable="2">@per.categoriaPermiso.descripcion</td>
                        <td>@per.codigo</td>
                        <td isSearchable="1">@per.descripcion_corta</td>
                        <td isSearchable="1">@per.descripcion_larga</td>
                        <td><button type="button" class="@per.idPermiso btnEditarPermiso btn btn-primary ">Editar</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <table id="dtPermisos" style="display:none;">
            @foreach (Model.Permiso per in permisos)
            {
                <tr>
                    <td>@per.idPermiso</td>
                    <td isSearchable="2">@per.categoriaPermiso.descripcion</td>
                    <td>@per.codigo</td>
                    <td isSearchable="1">@per.descripcion_corta</td>
                    <td isSearchable="1">@per.descripcion_larga</td>
                    <td><button type="button" class="@per.idPermiso btnEditarPermiso btn btn-primary ">Editar</button></td>
                </tr>
            }
        </table>
    </form>
</div>


@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/bundles/permiso")
}
