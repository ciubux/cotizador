@{
    Model.Permiso permiso = ViewBag.permiso;
    ViewBag.Title = "Modificar Permiso " + permiso.codigo;
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<div class="container">
    <input type="hidden" id="pagina" value="@ViewBag.pagina" />
    <input type="hidden" value="@ViewBag.debug" />
    <form class="form-horizontal">
        <div class="row">
            <input type="hidden" id="idPermiso" name="idPermiso" value="@permiso.idPermiso" />

            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(dv => permiso.descripcion_corta, htmlAttributes: new { @class = "control-label col-xs-4 col-lg-3" })
                        <div class="col-xs-8 col-lg-9">
                            @Html.TextBoxFor(c => permiso.descripcion_corta, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(dv => permiso.descripcion_larga, htmlAttributes: new { @class = "control-label col-xs-4 col-lg-3" })
                        <div class="col-xs-8 col-lg-9">
                            @Html.TextAreaFor(c => permiso.descripcion_larga, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="pull-right">
                <button type="button" id="btnCancelarRol" class="btn btn-danger">Cancelar</button>
                <button id="btnFinalizarEdicionRol" type="button" class="btn btn-success">Finalizar Edición</button>
            </div>
        </div>

</form>
</div>



@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/bundles/permiso")
}