@model IEnumerable<Model.Ciudad>

@Html.DropDownList("idCiudad",
new SelectList(Model, "idCiudad", "nombre", ((Model.Cotizacion)this.Session["cotizacionBusqueda"]).ciudad.idCiudad, ViewBag.List as IEnumerable<Model.Ciudad>),
new { @class = "form-control", onchange = @"
$.ajax({
url: '/Home/updateIdCiudadBusqueda',
type: 'POST',
dataType: 'JSON',
data: {
idCiudad: this.value
},

error: function (resultado) {
alert('Se generó un error al seleccionar la ciudad.');
location.reload();
},
success: function () {
//cargarChosenCliente();
location.reload();
}
});
" })
