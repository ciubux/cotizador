@{
    ViewBag.Title = "Inicio";
    List<Model.PrecioLista> precios = ViewBag.Precios;
    List<Model.Moneda> monedas = ViewBag.Monedas;
    List<Model.Categoria> categorias = ViewBag.Categorias;
    List<Model.Proveedor> proveedores = ViewBag.Proveedores;
    List<Model.CotizacionDetalle> detalles = ViewBag.Detalles;
}


<div class="container">

    <form class="form-horizontal">
        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="fecha" class="control-label col-xs-4">Fecha:</label>
                    <div class="col-xs-8">
                        <input type="hidden" id="fechatmp" value="@ViewBag.fecha" />
                        <input class="form-control" type="text" id="fecha" name="fecha">
                    </div>
                </div>
            </div>
            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="ciudad" class="control-label col-xs-4">Ciudad:</label>
                    <div class="col-xs-8">
                        @Html.Action("list", "Ciudad")
                    </div>
                </div>
            </div>

        </div>



        <div class="row">

            <!--CLIENTE-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="cliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>         
                            @if (ViewBag.existeCliente == 1)
                            {
                                    <option selected value="@ViewBag.idCliente">@ViewBag.cliente</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>

                    <!-- <div class="col-xs-8">
                            <input class="form-control" type="text" value="@ViewBag.cliente" id="cliente" name="cliente">
                        </div>
                    -->

                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="cliente" class="control-label col-xs-4">Dirigiado a:</label>

                    <div class="col-xs-8">
                        <input class="form-control" type="text" value="@ViewBag.contacto" id="contacto" name="contacto">
                    </div>
                </div>
            </div>



        </div>


        <div class="row">



            <div class="col-sm-6 col-lg-5">
                <!--IGV-->
                <div class="form-group">
                    <label for="igv" class="control-label col-xs-4">¿Precios unitarios incluyen IGV?:</label>
                    <div class="col-xs-8">
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (ViewBag.incluidoIgv)
                        {
                            <input class="radio-input" checked type="radio" name="igv" id="igvsi" value="1">@ViewBag.Si;
                }
                else
                {
                    <input class="radio-input" type="radio" name="igv" id="igvsi" value="1">@ViewBag.Si;
        }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (!ViewBag.incluidoIgv)
                        {
                            <input class="radio-input" checked type="radio" name="igv" id="igvno" value="0">@ViewBag.No;
                }
                else
                {
                    <input class="radio-input" type="radio" name="igv" id="igvno" value="0">@ViewBag.No;
        }
                            </label>
                        </div>
                    </div>
                </div>
            </div>




            <!--CANTIDADES-->
            <div class="col-sm-6 col-lg-5">

                <div class="form-group">
                    <label for="igv" class="control-label col-xs-4">¿Considerar Cantidades?:</label>
                    <div class="col-xs-8">
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (ViewBag.considerarCantidades)
                        {
                            <input class="radio-input" checked type="radio" name="considerarCantidades" id="cantidadessi" value="1">@ViewBag.Si;
                }
                else
                {
                    <input class="radio-input" type="radio" name="considerarCantidades" id="cantidadessi" value="1">@ViewBag.Si;
        }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (!ViewBag.considerarCantidades)
                        {
                            <input class="radio-input" checked type="radio" name="considerarCantidades" id="cantidadesno" value="0">@ViewBag.No;
                }
                else
                {
                    <input class="radio-input" type="radio" name="considerarCantidades" id="cantidadesno" value="0">@ViewBag.No;
        }
                            </label>
                        </div>
                    </div>
                </div>
            </div>






        </div>

        <div class="row">

            <!--FLETE-->

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="flete" class="control-label col-xs-4">% Flete:</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="number" min="0" max="100.00" step=".1" value="@ViewBag.flete" id="flete" name="flete">
                    </div>
                </div>
            </div>

