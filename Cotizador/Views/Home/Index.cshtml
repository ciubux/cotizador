                    </div>
                    <div class="radio radio-inline">
                        <label class="radio-label">
                            @if (!ViewBag.mostrarCodProveedor)
                    {
                        <input class="radio-input" checked type="radio" name="mostrarcodproveedor" id="codigoproveedorno" value="0">@ViewBag.MostrarCodProvNo;
            }
            else
            {
                <input class="radio-input" type="radio" name="mostrarcodproveedor" id="codigoproveedorno" value="0">@ViewBag.MostrarCodProvNo;
    }
                        </label>
                    </div>
                </div>
            </div>
        </div>
        -->
        </div>

        <div class="row pull-right">
            <button id="openAgregarProducto" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAgregarProducto">Agregar Producto</button>
        </div>

        <table id="tablefoottable" class="table" data-editing="true"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar'
               data-editing-allow-add="false"
               data-editing-allow-delete="true"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Cancelar">
            <thead>
                <tr>
                    <th data-name="idProducto" data-visible="false"></th>
                    <th data-name="esPrecioAlternativo" data-visible="false"></th>
                    <th data-name="proveedor" data-sortable="true">Proveedor</th>
                    <th data-name="codigo" data-sortable="true" data-breakpoints="xs">Código</th>
                    <th data-name="producto" data-sortable="false">Producto / Descripción</th>
                    <th data-name="presentacion" data-sortable="true" data-breakpoints="xs">Presentación</th>
                    <th data-name="imagen" data-sortable="false" data-breakpoints="xs sm">Imagen</th>
                    <!--<th data-name="valorUnitario" data-sortable="true" data-breakpoints="xs sm">Costo Unitario</th>-->
                    <th data-name="precioLista"  data-sortable="true" data-breakpoints="xs sm">Precio Lista</th>
                    <th data-name="porcentajeDescuento" data-sortable="true" data-breakpoints="xs sm">% Dscto</th>
                    <th data-name="precioNeto" data-sortable="true" data-breakpoints="xs sm">Precio Neto</th>
                    @if (ViewBag.considerarCantidades)
                    {
                         <th data-name="cantidad" data-sortable="true" data-breakpoints="xs sm">Cantidad</th>
                        <th data-name="subTotal" data-sortable="false" data-breakpoints="xs sm">Sub Total</th>
                    }
                    else
                    {
                         <th data-name="cantidad"  data-visible="false">Cantidad</th>
                         <th data-name="subTotal" data-visible="false">Sub Total</th>
                    }


                </tr>
            </thead>
            <tbody>
                @foreach (var cotizacionDetalle in detalles)
                {
                <tr data-expanded="true">
                    <td>  @cotizacionDetalle.producto.idProducto  </td>
                    <td>  @cotizacionDetalle.esPrecioAlternativo  </td>
                    <td>  @cotizacionDetalle.producto.proveedor  </td>
                    <td>  @cotizacionDetalle.producto.sku  </td>
                    <td>  @cotizacionDetalle.producto.descripcion  </td>
                    <td>  @cotizacionDetalle.unidad  </td>
                    <td class="column-img"><img class="table-product-img" src="data:image/png;base64,@Convert.ToBase64String(cotizacionDetalle.image)"></td>

                    @if (cotizacionDetalle.esPrecioAlternativo)
                    {
                        var precioLista = cotizacionDetalle.precioUnitarioSinIGV;
                        if (ViewBag.incluidoIgv)
                        {
                            precioLista  = precioLista + (precioLista * ViewBag.IGV);
                        }
                        <td style="text-align:right">@precioLista</td>
                    }
                    else
                    {
                        var precioLista = cotizacionDetalle.precioUnitarioAlternativoSinIGV;
                        if (ViewBag.incluidoIgv)
                        {
                            precioLista = precioLista + (precioLista * ViewBag.IGV);
                        }
                        <td style="text-align:right">@precioLista</td>
                    };
                    

                    <td style="text-align:right">  @cotizacionDetalle.porcentajeDescuento  %</td>
                    <td style="text-align:right">  @cotizacionDetalle.precio  </td>
                    <td style="text-align:right">  @cotizacionDetalle.cantidad  </td>
                    <td style="text-align:right">  @cotizacionDetalle.subTotal  </td>
                </tr>
                }



            </tbody>
        </table>



        <div class="row">
            <div class="col-sm-6 col-lg-9">
                <div class="form-group">
                    <label for="observaciones" class="control-label col-xs-2">Observaciones:</label>
                    <div class="col-xs-10">
                        <textarea rows="6" cols="300" style="min-width: 100%" id="observaciones" name="observaciones">@ViewBag.observaciones</textarea>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="form-group">
                    <div class="pull-right">
                        <span class="totales" >Subtotal: S/ </span>
                        <span class="totales" id="montoSubTotal">@ViewBag.subtotal</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="pull-right">
                        <span class="totales" >IGV 18%: S/ </span>
                        <span class="totales" id="montoIGV">@ViewBag.igv</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="pull-right">
                        <input type="hidden" id="total" value="@ViewBag.total" />
                        <span class="totales">TOTAL: S/ </span>
                        <span class="totales"  id="montoTotal">@ViewBag.total</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="pull-right">
                        <span class="totales" >Flete: S/ </span>
                        <span class="totales" id="montoFlete">@ViewBag.montoFlete</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="pull-right">
                        <span class="totales" >Total más Flete: S/ </span>
                        <span class="totales" id="montoTotalMasFlete">@ViewBag.montoTotalMasFlete</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="pull-right">
                <button id="generarPDF" type="button" class="btn btn-primary">Generar PDF</button>
            </div>
        </div>


    </form>
</div>



<!-- MODAL -->
<div class="modal fade" id="modalAgregarProducto" tabindex="-1">
    <!-- <div class="modal fade" id="modalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
       -->
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--CABECERA-->
            <div class="modal-header">
                <h4 class="modal-title" id="modalAgregarProductoTitle"><b>Agregar Producto</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>


            <!--CUERPO-->
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="row">

                        <div class="col-sm-6 col-lg-6">

                            <!--PRODUCTO-->
                            <div class="form-group">
