                                <div class="col-xs-8">
                                    <select class="form-control input-sm" id="producto" name="producto">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>

                            <!--proveedor-->
                            <div class="form-group">
                                <label for="proveedor" class="control-label col-xs-4">Proveedor:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="text" value="" id="proveedor" name="proveedor" disabled>
                                </div>
                            </div>

                            <!--PRESENTACIÓN-->
                            <div class="form-group">
                                <label for="unidad" class="control-label col-xs-4">Presentación:</label>
                                <div class="col-xs-8">
                                    <select class="form-control input-sm" id="unidad" name="unidad"></select>
                                </div>
                            </div>

                            <!--CANTIDAD-->
                            <div class="form-group">
                                <label for="cantidad" class="control-label col-xs-4">Cantidad:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="number" value="" min="1" step="1" id="cantidad" name="cantidad">
                                </div>
                            </div>

                        </div>


                        <!--IMAGEN-->
                        <div class="col-sm-6 col-lg-6 ">
                            <div class="form-group modal-add-image">
                                <img id="imgProducto" src="images/NoDisponible.gif">
                            </div>
                        </div>

                    </div>


                    <div class="row">

                        <input type="hidden" id="precioUnitarioSinIGV" value="0" />
                        <input type="hidden" id="precioUnitarioAlternativoSinIGV" value="0" />
                        <input type="hidden" id="esPrecioAlternativo" value="0" />

                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="precio" class="control-label col-xs-4">Precio:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="number" step=".1" value="" disabled id="precio" name="precio">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="valor" class="control-label col-xs-4">Costo Unitario:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="text" value=""  id="valor" name="valor" disabled>
                                    <input class="form-control" type="hidden" value="" id="valorAlternativo" name="valorAlternativo" disabled>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="porcentajeDescuento" class="control-label col-xs-4">% Dscto:</label>
                                <div class="col-xs-6">
                                    <input class="form-control" type="number" step=".1" value="" id="porcentajeDescuento" name="porcentajeDescuento">

                                    <!--    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalCalculadora" data-dismiss="modal">Close current, Launch Modal #2</button>
                                    -->
                                </div>
                                <div class="col-xs-2">
                                    <button id="btnCalcularDescuento" type="button" class="btn btn-primary bouton-image monBouton" data-toggle="modal" data-target="#modalCalculadora"></button>
                                    <!--                         <a href="#modalCalculadora" role="button" class="btn" data-toggle="modal">Launch other modal</a>
                                        -->
                                </div>


                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="subtotal" class="control-label col-xs-4">Sub total:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="text" value="" id="subtotal" name="subtotal" disabled>
                                </div>
                            </div>
                        </div>
                    </div>



                </form>

                <div class="row pull-right">
                    <span style="margin-right: 20px; color: red; font-weight: bold "  class="has-error" id="resultadoAgregarProducto"></span>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelAddProduct" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnAddProduct" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </div>
</div>




