@{
    ViewBag.Title = "Inicio";
    List<Model.PrecioLista> precios = ViewBag.Precios;
    List<Model.Moneda> monedas = ViewBag.Monedas;
    List<Model.Categoria> categorias = ViewBag.Categorias;
    List<Model.Proveedor> proveedores = ViewBag.Proveedores;
    Model.Cotizacion cotizacion = ViewBag.cotizacion;
}


<div class="container">

    <form class="form-horizontal">
        <div class="row">
            <!--NÚMERO COTIZACION-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="numero" class="control-label col-xs-4">Número:</label>
                    <div class="col-xs-8">
                        <!-- <input type="hidden" id="fechatmp" value="@ViewBag.numero" />-->

                        @if (ViewBag.numero == 0)
                        { ViewBag.numero = ""; }
                        <input class="form-control" disabled type="number" value="@ViewBag.numero" min="0" id="numero" name="numero">
                    </div>


                   <!-- <div class="col-xs-2">
                        <button id="btnBusqueda" type="button" class="btn btn-primary bouton-image searchBouton"></button>
                    </div>
                       -->


                </div>
            </div>



        </div>



        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="fecha" class="control-label col-xs-4">Fecha:</label>
                    <div class="col-xs-8">
                        <input type="hidden" id="fechatmp" value="@ViewBag.fecha" />
                        <input class="form-control" type="text" id="fecha" name="fecha">
                    </div>
                </div>
            </div>
            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="ciudad" class="control-label col-xs-4">Ciudad:</label>
                    <div class="col-xs-8">
                        @Html.Action("list", "Ciudad")
                    </div>
                </div>
            </div>

        </div>



        <div class="row">

            <!--CLIENTE-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="cliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                            {
                                <option selected value="@ViewBag.idCliente">@ViewBag.cliente</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>

                    <!-- <div class="col-xs-8">
                            <input class="form-control" type="text" value="@ViewBag.cliente" id="cliente" name="cliente">
                        </div>
                    -->

                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="cliente" class="control-label col-xs-4">Dirigido a:</label>

                    <div class="col-xs-8">
                        <input class="form-control" type="text" value="@ViewBag.contacto" id="contacto" name="contacto">
                    </div>
                </div>
            </div>



        </div>


        <div class="row">



            <div class="col-sm-6 col-lg-5">
                <!--IGV-->
                <div class="form-group">
                    <label for="igv" class="control-label col-xs-4">¿Precios unitarios incluyen IGV?:</label>
                    <div class="col-xs-8">
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (ViewBag.incluidoIgv)
                                {
                                    <input class="radio-input" checked type="radio" name="igv" id="igvsi" value="1">@ViewBag.Si;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="igv" id="igvsi" value="1">@ViewBag.Si;
                                }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (!ViewBag.incluidoIgv)
                                {
                                    <input class="radio-input" checked type="radio" name="igv" id="igvno" value="0">@ViewBag.No;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="igv" id="igvno" value="0">@ViewBag.No;
                                }
                            </label>
                        </div>
                    </div>
                </div>
            </div>




            <!--CANTIDADES-->
            <div class="col-sm-6 col-lg-5">

                <div class="form-group">
                    <label for="igv" class="control-label col-xs-4">¿Considerar Cantidades?:</label>
                    <div class="col-xs-8">
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (ViewBag.considerarCantidades)
                                {
                                    <input class="radio-input" checked type="radio" name="considerarCantidades" id="cantidadessi" value="1">@ViewBag.Si;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="considerarCantidades" id="cantidadessi" value="1">@ViewBag.Si;
                                }

                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label class="radio-label">
                                @if (!ViewBag.considerarCantidades)
                                {
                                    <input class="radio-input" checked type="radio" name="considerarCantidades" id="cantidadesno" value="0">@ViewBag.No;
                                }
                                else
                                {
                                    <input class="radio-input" type="radio" name="considerarCantidades" id="cantidadesno" value="0">@ViewBag.No;
                                }
                            </label>
                        </div>
                    </div>
                </div>
            </div>






        </div>

        <div class="row">

            <!--FLETE-->

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="flete" class="control-label col-xs-4">% Flete:</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="number" min="0" max="100.00" step=".1" value="@ViewBag.flete" id="flete" name="flete">
                    </div>
                </div>
            </div>


        </div>

        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="openAgregarProducto" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAgregarProducto">Agregar Producto</button>
        </div>




        <table id="tablefoottable" class="table" data-editing="true"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="true"
               data-editing-allow-delete="true"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idProducto" data-visible="false"></th>
                    <th data-name="esPrecioAlternativo" data-visible="false"></th>
                    <th data-name="proveedor" data-sortable="true">Prov.</th>
                    <th data-name="codigo" data-sortable="true" data-breakpoints="xs">Código</th>
                    <th data-name="producto" data-sortable="false">Producto / Descripción</th>
                    <th data-name="presentacion" data-sortable="true" data-breakpoints="xs">Unidad</th>
                    <th data-name="imagen" data-sortable="false" data-breakpoints="xs sm">Imagen</th>
                    <!--<th data-name="valorUnitario" data-sortable="true" data-breakpoints="xs sm">Costo Unitario</th>-->
                    <th data-name="precioLista" data-sortable="true" data-breakpoints="xs sm">Precio Lista</th>
                    <th data-name="porcentajeDescuento" data-sortable="true" data-breakpoints="xs sm">% Dscto</th>
                    <th data-name="precioNeto" data-sortable="true" data-breakpoints="xs sm">Precio Neto</th>
                    <th data-name="margen" data-sortable="true" data-breakpoints="xs sm" >Mg %</th>
                    @if (ViewBag.considerarCantidades)
                    {
                        <th data-name="cantidad" data-sortable="true" data-breakpoints="xs sm">Cant.</th>
                        <th data-name="subTotal" data-sortable="false" data-breakpoints="xs sm">Sub Total</th>
                    }
                    else
                    {
                        <th data-name="cantidad" data-visible="false">Cantidad</th>
                        <th data-name="subTotal" data-visible="false">Sub Total</th>
                    }
                   <!-- <th data-name="ordenamiento" data-sortable="true" data-breakpoints="xs sm"></th>
                       -->
                </tr>
            </thead>
            <tbody>
              
                @foreach (var cotizacionDetalle in cotizacion.cotizacionDetalleList)
                {
                <tr data-expanded="true">
                    <td>  @cotizacionDetalle.producto.idProducto  </td>
                    <td>  @cotizacionDetalle.esPrecioAlternativo  </td>
                    <td>  @cotizacionDetalle.producto.proveedor  </td>
                    <td>  @cotizacionDetalle.producto.sku  </td>
                    <td>  @cotizacionDetalle.producto.descripcion  </td>
                    <td>  @cotizacionDetalle.unidad  </td>
                    <td class="column-img"><img class="table-product-img" src="data:image/png;base64,@Convert.ToBase64String(cotizacionDetalle.producto.image)"></td>
                    <td class="@cotizacionDetalle.producto.idProducto detprecioLista" style="text-align:right">@cotizacionDetalle.producto.precioLista</td>
                    <td class="@cotizacionDetalle.producto.idProducto detporcentajedescuento" style="text-align:right; ">@cotizacionDetalle.porcentajeDescuento  %</td>
                    <td class="@cotizacionDetalle.producto.idProducto detprecio" style="text-align:right">@cotizacionDetalle.precio</td>
                    <td class="@cotizacionDetalle.producto.idProducto" style="text-align:right">%</td>
                    <td class="@cotizacionDetalle.producto.idProducto detcantidad" style="text-align:right">@cotizacionDetalle.cantidad</td>
                    <td class="@cotizacionDetalle.producto.idProducto detsubtotal" style="text-align:right">@cotizacionDetalle.subTotal</td>
                  <!--  <td><div class="container-img"><div class="up"></div> <div class="down" ></div></div></td>
               -->
                      </tr>
                }

            </tbody>
        </table>



        <div class="row">
            <div class="col-sm-6 col-lg-9">
                <div class="form-group">
                    <label for="observaciones" class="control-label col-xs-2">Observaciones:</label>
                    <div class="col-xs-10">
                        <textarea rows="6" cols="300" style="min-width: 100%" id="observaciones" name="observaciones">@ViewBag.observaciones</textarea>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                @if (ViewBag.considerarCantidades)
                {
                    <div class="form-group">
                        <div class="pull-right">
                            <span class="totales">Subtotal: S/ </span>
                            <span class="totales" id="montoSubTotal">@ViewBag.subtotal</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <span class="totales">IGV 18%: S/ </span>
                            <span class="totales" id="montoIGV">@ViewBag.igv</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <input type="hidden" id="total" value="@ViewBag.total" />
                            <span class="totales">TOTAL: S/ </span>
                            <span class="totales" id="montoTotal">@ViewBag.total</span>
                        </div>
                    </div>
                    <!--
                    <div class="form-group">
                        <div class="pull-right">
                            <span class="totales">Flete: S/ </span>
                            <span class="totales" id="montoFlete">@ViewBag.montoFlete</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <span class="totales">Total más Flete: S/ </span>
                            <span class="totales" id="montoTotalMasFlete">@ViewBag.montoTotalMasFlete</span>
                        </div>
                    </div>-->
                }
            </div>
        </div>

        <div class="row">
            <div class="pull-right">
                <button id="grabarCotizacion" type="button" class="btn btn-primary">Grabar Cotización</button>
                <button id="generarPDF" type="button" class="btn btn-primary">Generar PDF</button>
            </div>
        </div>


    </form>
</div>



<!-- MODAL AGREGAR PRODUCTO -->
<div class="modal fade" id="modalAgregarProducto" tabindex="-1">
    <!-- <div class="modal fade" id="modalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
       -->
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--CABECERA-->
            <div class="modal-header">
                <h4 class="modal-title" id="modalAgregarProductoTitle"><b>Agregar Producto</b></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p></p>
            </div>


            <!--CUERPO-->
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="row">

                        <div class="col-sm-6 col-lg-6">

                            <!--PRODUCTO-->
                            <div class="form-group">
                                <label for="producto" class="control-label col-xs-4">Producto:</label>
                                <div class="col-xs-8">
                                    <select class="form-control input-sm" id="producto" name="producto">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>

                            <!--proveedor-->
                            <div class="form-group">
                                <label for="proveedor" class="control-label col-xs-4">Proveedor:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="text" value="" id="proveedor" name="proveedor" disabled>
                                </div>
                            </div>

                            <!--PRESENTACIÓN-->
                            <div class="form-group">
                                <label for="unidad" class="control-label col-xs-4">Presentación:</label>
                                <div class="col-xs-8">
                                    <select class="form-control input-sm" id="unidad" name="unidad"></select>
                                </div>
                            </div>

                            <!--PRECIO LISTA-->
                            <div class="form-group">
                                <label for="precioLista" class="control-label col-xs-4">Precio Lista:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="text" value="" id="precioLista" name="precioLista" disabled>
                                </div>
                            </div>


                        </div>


                        <!--IMAGEN-->
                        <div class="col-sm-6 col-lg-6 ">
                            <div class="form-group modal-add-image">
                                <img id="imgProducto" src="images/NoDisponible.gif">
                            </div>
                        </div>

                    </div>


                    <div class="row">

                        <input type="hidden" id="precioUnitarioSinIGV" value="0" />
                        <input type="hidden" id="precioUnitarioAlternativoSinIGV" value="0" />
