        <div class="col-sm-6 col-lg-5">
            <div class="form-group">
                <label for="codigoproveedor" class="control-label col-xs-4">Código Proveedor:</label>
                <div class="col-xs-8">
                    <div class="radio radio-inline">
                        <label class="radio-label">
                            @if (ViewBag.mostrarCodProveedor)
                    {
                        <input class="radio-input" checked type="radio" name="mostrarcodproveedor" id="codigoproveedorsi" value="1">@ViewBag.MostrarCodProvSi;
            }
            else
            {
                <input class="radio-input" type="radio" name="mostrarcodproveedor" id="codigoproveedorsi" value="1"> @ViewBag.MostrarCodProvSi;
    }
