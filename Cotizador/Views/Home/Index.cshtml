                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="precio" class="control-label col-xs-4">Precio Neto:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="number" step=".1" value="" disabled id="precio" name="precio">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6" id="cantidadiv">
                            <div class="form-group">
                                <label for="cantidad" class="control-label col-xs-4">Cantidad:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="number" value="" min="1" step="1" id="cantidad" name="cantidad">
                                </div>
                            </div>
                        </div>



                    </div>

                    <div class="row">
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group">
                                <label for="porcentajeDescuento" class="control-label col-xs-4">% Dscto:</label>
                                <div class="col-xs-5">
                                    <input class="form-control" type="number" step=".1" value="" id="porcentajeDescuento" name="porcentajeDescuento">

                                    <!--    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalCalculadora" data-dismiss="modal">Close current, Launch Modal #2</button>
                                    -->
                                </div>
                                <div class="col-xs-2">
                                    <button id="btnCalcularDescuento" type="button" class="btn btn-primary bouton-image monBouton" data-toggle="modal" data-target="#modalCalculadora"></button>
                                    <!--                         <a href="#modalCalculadora" role="button" class="btn" data-toggle="modal">Launch other modal</a>
                                        -->
                                </div>


                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6">
                            <div class="form-group" id="subtotaldiv">
                                <label for="subtotal" class="control-label col-xs-4">Sub total:</label>
                                <div class="col-xs-8">
                                    <input class="form-control" type="text" value="" id="subtotal" name="subtotal" disabled>
                                </div>
                            </div>
                        </div>
                    </div>



                </form>

                <div class="row pull-right">
                    <span style="margin-right: 20px; color: red; font-weight: bold " class="has-error" id="resultadoAgregarProducto"></span>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancelAddProduct" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnAddProduct" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </div>
</div>




