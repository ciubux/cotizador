                        {
                            @Html.TextBoxFor(p => pedido.direccionEntrega.contacto, htmlAttributes: new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.TextBoxFor(p => pedido.direccionEntrega.contacto, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                        }
                    </div>
