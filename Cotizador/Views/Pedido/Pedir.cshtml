                        {
                            @Html.Action("GetProvinciasPorDepartamento", "Ubigeo",
                                           new
                                           {
                                               departamentoSelectId = "ActualDepartamento",
                                               provinciaSelectId = "ActualProvincia",
                                               distritoSelectId = "ActualDistrito",
                                               distritoDivId = "dvDistritos",
                                               codigoDepartamento = pedido.ubigeoEntrega.Id.Substring(0, 2),
                                               selectedValue = pedido.ubigeoEntrega.Id.Substring(0, 4),
                                               disabled = true
                                           })
                        }
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => pedido.ubigeoEntrega.Distrito, new { @class = "control-label col-xs-4" })
                    <div id="dvDistritos" class="col-xs-8">
                        <!-- class="control-distrito-width" style="display:flex">-->
                        @if (pedido.cliente.habilitadoModificarDireccionEntrega || pedido.usuario.modificaDireccionEntrega)
                        {
                            @Html.Action("GetDistritosPorProvincia", "Ubigeo", new
                           {
                               distritoSelectId = "ActualDistrito",
                               codigoDepartamento = pedido.ubigeoEntrega.Id.Substring(0, 2),
                               codigoProvincia = pedido.ubigeoEntrega.Id.Substring(0, 4),
                               selectedValue = pedido.ubigeoEntrega.Id.Substring(0, 6)
                           })
                        }
                        else
                        {
                            @Html.Action("GetDistritosPorProvincia", "Ubigeo", new
                       {
                           distritoSelectId = "ActualDistrito",
                           codigoDepartamento = pedido.ubigeoEntrega.Id.Substring(0, 2),
                           codigoProvincia = pedido.ubigeoEntrega.Id.Substring(0, 4),
                           selectedValue = pedido.ubigeoEntrega.Id.Substring(0, 6),
                           disabled = true
                       })
                        }


                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <!--FECHA ENTREGA -->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.rangoFechasEntrega, htmlAttributes: new { @class = "control-label col-xs-6 col-lg-4" })
                    <div class="input-group col-xs-6 col-lg-8">
                        <div class="input-group-addon" style="width:70px">
                            <span class="input-group-text" id="basic-addon1">Desde:</span>
