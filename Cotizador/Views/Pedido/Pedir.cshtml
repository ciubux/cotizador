                        {
                            @Html.TextBoxFor(p => pedido.direccionEntrega.descripcion, htmlAttributes: new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.TextBoxFor(p => pedido.direccionEntrega.descripcion, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                        }

                    </div>
                </div>
            </div>
        </div>


        <div class="row mostrarDatosParaGuia">
            <!--CENTRO DE COSTOS -->
            <div class="col-sm-6 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.direccionEntrega.nombre, htmlAttributes: new { @class = "control-label col-xs-2" })
                    <div class="input-group col-xs-6">
                        <div class="input-group-addon">
                            <span class="input-group-text" id="basic-addon1">Nombre:</span>
                        </div>
                        @Html.TextBoxFor(p => pedido.direccionEntrega.nombre, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                    </div>
                    <div class="input-group col-xs-4">
                        <div class="input-group-addon">
                            <span class="input-group-text" id="basic-addon1">Código Cliente:</span>
