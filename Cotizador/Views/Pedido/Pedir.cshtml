                        <div class="input-group-addon">
                            <span class="input-group-text" id="basic-addon1">Teléfono:</span>
                        </div>
                        @if (pedido.cliente.habilitadoModificarDireccionEntrega || pedido.usuario.modificaDireccionEntrega)
                        {
                            @Html.TextBoxFor(p => pedido.direccionEntrega.telefono, htmlAttributes: new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.TextBoxFor(p => pedido.direccionEntrega.telefono, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                        }
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <div class="input-group col-xs-12">
                        <div class="input-group-addon">
                            <span class="input-group-text" id="basic-addon1">Dirección:</span>
                        </div>
