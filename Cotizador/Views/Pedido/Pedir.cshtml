                                                                             selectedValue = pedido.ubigeoEntrega.Id.Substring(0, 2),
                                                                             disabled = true
                                                                         })
                        }

                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">

                    @Html.LabelFor(model => pedido.ubigeoEntrega.Provincia, new { @class = "control-label col-xs-4" })
                    <div id="dvProvincias" class="col-xs-8">
