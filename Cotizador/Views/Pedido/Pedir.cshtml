                        </div>
                        @Html.TextBoxFor(p => pedido.direccionEntrega.direccionDomicilioLegal, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
            </div>
        </div>




        <div class="row mostrarDatosParaGuia">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
