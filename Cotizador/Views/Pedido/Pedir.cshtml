        </div>

        <!--MONEDA-->
        <div class="col-sm-6 col-lg-4">
            <div class="form-group">
                @Html.LabelFor(p => pedido.moneda, htmlAttributes: new { @class = "control-label col-xs-4" })
                <div class="col-xs-8">
                    @Html.Action("SelectMonedas", "Moneda",
                                new
                                {
                                    SelectId = "codigoMoneda",
                                    selectedValue = pedido.moneda != null ? pedido.moneda.codigo : null
                                })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!--NUMERO REFERENCIA -->
        <div class="col-sm-6 col-lg-4" id="divReferenciaCliente">
            <div class="form-group">
                @Html.LabelFor(p => pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "control-label col-xs-4" })
                <div class="col-xs-8">
                    @if (pedido.ordenCompracliente != null && pedido.ordenCompracliente.idOrdenCompraCliente != Guid.Empty)
                    {
                        @Html.TextBoxFor(p => pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                    }
                    else
                    {
                        @Html.TextBoxFor(p => pedido.numeroReferenciaCliente, htmlAttributes: new { @class = "form-control" })
                    }
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(p => pedido.numeroRequerimiento, htmlAttributes: new { @class = "control-label col-xs-4" })
                <div class="col-xs-8">
                    @Html.TextBoxFor(p => pedido.numeroRequerimiento, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>

        <!--CIUDAD-->
        <div class="col-sm-6 col-lg-4" id="divCiudadASolicitar">
            <div class="form-group">
                @Html.LabelFor(p => pedido.ciudadASolicitar, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudadASolicitar" })
                <div class="col-xs-8">
                    @Html.Action("GetCiudadesASolicitar", "Ciudad",
                                                            new
                                                            {
                                                                ciudadSelectId = "idCiudadASolicitar",
                                                                selectedValue = pedido.ciudadASolicitar.idCiudad
                                                            })
                </div>
            </div>
        </div>
    </div>



