@{
    Model.UTILES.RegistroCargaStock anterior = null;
}
<div class="page-header">
    <h3>Carga Masiva Pedidos Venta</h3>
</div>
<div class="container">
    <form class="form-horizontal" action="/Pedido/Load" method="post" enctype="multipart/form-data" id="formLoad">

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="file" class="control-label col-xs-4">RUC:</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="text" name="ruc" id="ruc" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label class="control-label col-xs-4"></label>
                    <div class="col-xs-8">
                        <button id="btnActualizarRUC" type="button" class="btn btn-success">Actualizar RUC</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="file" class="control-label col-xs-4">Excel (xlsx):</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="file" name="file" id="file" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="file" class="control-label col-xs-4">Última Fila:</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="number" value="0" name="ultimaFila" id="ultimaFila" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label class="control-label col-xs-4"></label>
                    <div class="col-xs-8">
                        <button type="button" id="btnCargarPedidos" class="btn btn-primary">Cargar Pedidos</button>
                    </div>
                </div>
            </div>
        </div>








        @if (ViewBag.numerosPedido != null && ViewBag.numerosPedido.Length > 0)
        {
            <div class="row">
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <label class="control-label col-xs-4">Número Grupo</label>
                        <div class="col-xs-8">
                            @ViewBag.numeroGrupo
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <label class="control-label col-xs-4">Números Pedidos</label>
                        <div class="col-xs-8">
                            @ViewBag.numerosPedido
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <table id="tableHistorialPedido" class="table" data-editing="false"
                           data-editing-allow-add="false"
                           data-editing-allow-delete="false"
                           data-editing-allow-edit="false"
                           data-show-toggle="false">
                        <thead>
                            <tr>
                                <th data-sortable="false" data-visible="true" data-breakpoints="xs">PRODUCTO</th>
                                @foreach (Model.Ciudad sede in ViewBag.sedes)
                                {
                                    <th data-sortable="false" data-visible="true" data-breakpoints="xs">sede.nombre</th>
                                }
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Model.UTILES.RegistroCargaStock stock in ViewBag.sedes)
                            {
                                if (anterior == null || !anterior.producto.idProducto.Equals(stock.producto.idProducto))
                                {
                                    if (anterior != null)
                                    {
                                        </tr>
                                    }
                                    <tr>
                                        <td>@stock.producto.sku - @stock.producto.descripcion</td>
                                }
                                @switch
                                    <td>@stock.can.sku @stock.producto.descripcion</td>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }

    </form>

</div>


@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/Scripts/pedidoLoad.js")
}
