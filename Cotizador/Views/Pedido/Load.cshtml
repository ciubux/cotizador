@{
    Model.UTILES.RegistroCargaStock anterior = null;
}
<div class="page-header">
    <h3>Carga Masiva Pedidos Venta</h3>
</div>
<div class="container">
    <form class="form-horizontal" action="/Pedido/Load" method="post" enctype="multipart/form-data" id="formLoad">

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="file" class="control-label col-xs-4">RUC:</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="text" name="ruc" id="ruc" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label class="control-label col-xs-4"></label>
                    <div class="col-xs-8">
                        <button id="btnActualizarRUC" type="button" class="btn btn-success">Actualizar RUC</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="file" class="control-label col-xs-4">Excel (xlsx):</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="file" name="file" id="file" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label for="file" class="control-label col-xs-4">Última Fila:</label>
                    <div class="col-xs-8">
                        <input class="form-control" type="number" value="0" name="ultimaFila" id="ultimaFila" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    <label class="control-label col-xs-4"></label>
                    <div class="col-xs-8">
                        <button type="button" id="btnCargarPedidos" class="btn btn-primary">Cargar Pedidos</button>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.numerosPedido != null && ViewBag.numerosPedido.Length > 0)
        {
            <div class="row">
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <label class="control-label col-xs-4">Número Grupo</label>
                        <div class="col-xs-8">
                            @ViewBag.numeroGrupo
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <label class="control-label col-xs-4">Números Pedidos</label>
                        <div class="col-xs-8">
                            @ViewBag.numerosPedido
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <h3>Estado de Stock:</h3>
                    <table id="tableDetalleStockPedidos" class="table" data-editing="false"
                           data-editing-allow-add="false"
                           data-editing-allow-delete="false"
                           data-editing-allow-edit="false"
                           data-show-toggle="false">
                        <thead>
                            <tr>
                                <th data-sortable="false" data-visible="true" data-breakpoints="xs">PRODUCTO</th>
                                @foreach (Model.Ciudad sede in ViewBag.sedes)
                                {
                                    <th data-sortable="false" data-visible="true" data-breakpoints="xs">@sede.nombre</th>
                                }
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (List<Cotizador.Models.DTOsShow.StockPedidoShow> fila in ViewBag.tableStocks)
                            {
                                <tr>
                                    @foreach (Cotizador.Models.DTOsShow.StockPedidoShow celda in fila)
                                    {
                                        <td>
                                            @celda.texto
                                            @if (celda.esStock)
                                            {
                                                <br />
                                                if (celda.semaforoStock == 0)
                                                {
                                                    <label class="lbl-stock-no-registrado">@celda.textoStock</label>
                                                }

                                                if (celda.semaforoStock == 1)
                                                {
                                                    <label class="lbl-stock-success">@celda.textoStock</label>
                                                }

                                                if (celda.semaforoStock == 2)
                                                {
                                                    <label class="lbl-stock-warning">@celda.textoStock</label>
                                                }

                                                if (celda.semaforoStock == 3)
                                                {
                                                    <label class="lbl-stock-danger">@celda.textoStock</label>
                                                }
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                </div>
                <div class="col-xs-8">
                    <div class="row right">
                        <div class="col-lg-12 leyenda-box-inline">
                            <div class="leyenda-box-title">Leyenda Stock:</div>
                            <div class="">
                                <div class="leyenda-box-color guia-stock-success"></div>
                                <div>Stock Suficiente</div>
                            </div>
                            <div class="">
                                <div class="leyenda-box-color guia-stock-warning"></div>
                                <div>Stock insuficiente para atender este<br />y los demás pedidos ingresados</div>
                            </div>
                            <div class="">
                                <div class="leyenda-box-color guia-stock-danger"></div>
                                <div>Stock insuficiente<br />para esta cotización</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    </form>

</div>


@section Scripts {
    @Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}?nocache=" + TempData["ScriptVersion"] + "\"></script>", "~/Scripts/pedidoLoad.js")
}
