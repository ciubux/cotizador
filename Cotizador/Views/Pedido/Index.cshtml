                </div>

            </div>-->

            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.ciudad, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                                             new
                                             {
                                                 ciudadSelectId = "idCiudad",
                                                 selectedValue = pedido.ciudad.idCiudad
                                             })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4">
                <!--Cliente-->
                <div class="form-group">
                    <label for="idCliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                            {
                                <option selected value="@pedido.cliente.idCliente">@pedido.cliente</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>
                </div>

            </div>



        </div>
        <div class="row">

            <!--FECHA SOLICITUD-->
            <div class="col-sm-6 col-lg-4">
