                <div class="input-group col-xs-6 col-lg-8">
                    <div class="input-group-addon" style="width:70px">
                        <span class="input-group-text" id="basic-addon1">Desde:</span>
                    </div>
                    <input type="hidden" id="fechaSolicitudDesdetmp" value="@ViewBag.fechaSolicitudDesde" />
