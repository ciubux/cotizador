@{
    ViewBag.Title = "Búsqueda Pedidos";
    Model.Pedido pedido = ViewBag.pedido;
    Model.GuiaRemision guiaRemision = ViewBag.guiaRemision;
    List<Model.Pedido> pedidoList = ViewBag.pedidoList;

}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="container">
    <input type="hidden" id="idPedido" value="" />
    <input type="hidden" id="pagina" value="2" />
    <form class="form-horizontal">

        <div class="row">
            <!--NÚMERO PEDIDO-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.numeroPedido, htmlAttributes: new { @class = "control-label col-xs-4" })

                    <div class="col-xs-8">
                        @if (pedido.numeroPedido > 0)
                        {
                            @Html.TextBoxFor(p => pedido.numeroPedido, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
                        }
                        else
                        {
                            @Html.TextBoxFor(p => pedido.numeroPedido, htmlAttributes: new { @class = "form-control", type = "number", min = "0", Value = "" })
                        }
                        <span style="margin-right: 20px; font-size:12px; color: darkred; font-weight: normal " class="has-error">*Si ingresa el número los demás criterios no serán considerados al realizar la búsqueda.</span>
                    </div>

                </div>

            </div>


            <!--NÚMERO GRUPO PEDIDO
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.numeroGrupoPedido, htmlAttributes: new { @class = "control-label col-xs-4" })

                    <div class="col-xs-8">
                        @if (pedido.numeroGrupoPedido > 0)
                    {
                        @Html.TextBoxFor(p => pedido.numeroGrupoPedido, htmlAttributes: new { @class = "form-control", type = "number", min = "0" })
                }
                else
                {
                    @Html.TextBoxFor(p => pedido.numeroGrupoPedido, htmlAttributes: new { @class = "form-control", type = "number", min = "0", Value = "" })
            }
                    </div>

                </div>

            </div>-->

        </div>


        <div class="row">
            <!--CIUDAD-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.ciudad, htmlAttributes: new { @class = "control-label col-xs-4", @for = "idCiudad" })
                    <div class="col-xs-8">
                        @Html.Action("GetCiudades", "Ciudad",
                                   new
                                   {
                                       ciudadSelectId = "idCiudad",
                                       selectedValue = pedido.ciudad.idCiudad
                                   })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-5">
                <!--Cliente-->
                <div class="form-group">
                    <label for="idCliente" class="control-label col-xs-4">Cliente:</label>

                    <div class="col-xs-8">
                        <select class="form-control input-sm" id="idCliente" name="idCliente" required>
                            @if (ViewBag.existeCliente == 1)
                            {
                                <option selected value="@pedido.cliente.idCliente">@pedido.cliente</option>
                            }
                            else
                            {
                                <option value=""></option>
                            }
                        </select>
                    </div>
                </div>

            </div>



        </div>



        <div class="row">
            <!--FECHA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.fechaSolicitudDesde, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaSolicitudDesdetmp" value="@ViewBag.fechaSolicitudDesde" />
                        <input class="form-control" type="text" id="pedido_fechaSolicitudDesde" name="pedido_fechaSolicitudDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.fechaSolicitudHasta, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaSolicitudHastatmp" value="@ViewBag.fechaSolicitudHasta" />
                        <input class="form-control" type="text" id="pedido_fechaSolicitudHasta" name="pedido_fechaSolicitudHasta">
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!--FECHA ENTREGA-->
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.fechaEntregaDesde, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEntregaDesdetmp" value="@ViewBag.fechaEntregaDesde" />
                        <input class="form-control" type="text" id="pedido_fechaEntregaDesde" name="pedido_fechaEntregaDesde">
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(p => pedido.fechaEntregaHasta, htmlAttributes: new { @class = "control-label col-xs-4" })
                    <div class="col-xs-8">
                        <input type="hidden" id="fechaEntregaHastatmp" value="@ViewBag.fechaEntregaHasta" />
                        <input class="form-control" type="text" id="pedido_fechaEntregaHasta" name="pedido_fechaEntregaHasta">
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="estado" class="control-label col-xs-4">Estado:</label>
                    <div class="col-xs-8">
                        @Html.DropDownList("estado",
                             EnumHelper.GetSelectList(typeof(Model.SeguimientoPedido.estadosSeguimientoPedido), pedido.seguimientoPedido.estado),
                             new { @class = "form-control" }
                             )
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-5">
                <div class="form-group">
                    <label for="estadoCrediticio" class="control-label col-xs-4">Estado Crediticio:</label>
                    <div class="col-xs-8">
                        @Html.DropDownList("estadoCrediticio",
                                            EnumHelper.GetSelectList(typeof(Model.SeguimientoCrediticioPedido.estadosSeguimientoCrediticioPedido), pedido.seguimientoCrediticioPedido.estado),
                                            new { @class = "form-control" }
                                            )
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            @if (pedido.usuario.apruebaPedidos)
            {
                <div class="col-sm-6 col-lg-5">
                    <!--USUARIO-->
                    <div class="form-group">
                        <label for="usuario" class="control-label col-xs-4">Usuario:</label>
                        <div class="col-xs-8">
                            @Html.Action("usuariosPedidoList", "Usuario")
                        </div>
                    </div>

                </div>
            }
        </div>

        <div class="row pull-right" style="margin-bottom:10px; margin-right:0px">
            <button id="btnLimpiarBusquedaPedidos" type="button" class="btn btn-primary  bouton-image botonClean">Limpiar</button>
            <button id="btnBusquedaPedidos" type="button" class="btn btn-primary  bouton-image botonSearch">Buscar</button>
        </div>

        <table id="tablePedidos" class="table" data-editing="false" data-paging="true" data-paging-count-format="{CP} de {TP}"
               data-editing-show-text='<span class="fooicon fooicon-pencil" aria-hidden="true"></span> Editar Detalle'
               data-editing-allow-add="false"
               data-editing-allow-delete="false"
               data-editing-allow-edit="false"
               data-sorting="true"
               data-show-toggle="false"
               data-editing-hide-text="Finalizar edición"
               data-editing-add-text="Descartar cambios">
            <thead>
                <tr>
                    <th data-name="idPedido" data-visible="false"></th>
                    <th data-name="numero" data-visible="true">N°</th>
                    <th data-name="numeroGrupo" data-visible="false">N° Grupo</th>
                    <th data-name="razonSocial" data-sortable="true">Razón Social</th>
                    <th data-name="ruc" data-sortable="false" data-breakpoints="xs">RUC</th>
                    <th data-name="ciudad" data-sortable="false" data-breakpoints="xs">Ciudad</th>
                    <th data-name="usuario" data-visible="true">Creado por</th>
                    <th data-name="fechaSolicitud" data-sortable="true" data-breakpoints="xs">Fecha y Hora Solicitud</th>
                    <th data-name="rangoFechaEntrega" data-sortable="true" data-breakpoints="xs">Rango Fecha Entrega</th>
                    <th data-name="total" data-sortable="true" data-breakpoints="xs">Total</th>
                    <th data-name="estado" data-sortable="true" data-breakpoints="xs">Estado</th>
                    <th data-name="aprobador" data-sortable="true" data-breakpoints="xs">Modificado última vez por</th>
                    <th data-name="observacion" data-sortable="true" data-breakpoints="xs">Comentario Estado</th>
                    <th data-name="estadoCrediticio" data-sortable="true" data-breakpoints="xs">Estado Crediticio</th>
                    <th data-name="opciones" data-sortable="true" data-breakpoints="xs"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>


        @if (pedidoList.Count == 0)
        {
            <div id="msgSeEncontraronPedidos" style="display:none;" class="col-lg-12">
                <p class="pagination-centered" style=" font-size: medium" align="center">
                    No se encontraron pedidos.
                </p>
            </div>
        }




    </form>
</div>


